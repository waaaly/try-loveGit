@import "../../../__wuBaseWxss__/6.wxss";

@import "../../../app.wxss";

.shopInfo {
    margin-top: 15px;
    background: #ffffff;
    box-sizing: border-box;
    padding: 10px;
}

.shopInfo_shot {
    display: flex;
    align-items: center;
}

.shopInfo_shot .flag_solid {
    display: inline-block;
    margin-left: 5px;
    width: 46px;
    min-width: 46px;
    text-align: center;
}

.shopInfo_shot .flag_solid.jx {
    background: #C09947;
}

.shopInfo_logo {
    width: 90px;
    height: 30px;
    box-sizing: border-box;
    border: 1rpx solid #ddd;
    margin: 0 5px;
}

.shopInfo_diamond {
    background: #631AC2;
}

.shopInfo_detail {
    display: flex;
    margin-top: 10px;
}

.shopInfo_detail_wrap {
    flex: 1;
    display: flex;
}

.shopInfo_detail_item {
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    flex: 1;
    border-right: 1rpx solid #ddd;
}

.shopInfo_detail_item .num {
    font-size: 14px;
}

.shopInfo_detail_item .name {
    font-size: 10px;
}

.shopInfo_detail_item:last-child {
    border-right: 0;
}

.shopInfo_detail_score {
    font-size: 10px;
}

.shopInfo_detail_score .red {
    color: #E93B3D;
}

.shopInfo_detail_score .green {
    color: #18c461;
}

.shopInfo_enter {
    display: flex;
    margin-top: 10px;
}

.shopInfo_enter_banner {
    width: 223px;
    height: 92px;
}

.shopInfo_enter_right {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 5px;
}

.shopInfo_enter_right_button {
    display: flex;
    color: #666666;
    justify-content: center;
    align-items: center;
    height: 28px;
    font-size: 12px;
    border-radius: 4px;
    background-color: #F7F7F7;
}

.shopInfo_operation {
    display: flex;
    margin-top: 10px;
}

.shopInfo_operation text {
    line-height: 15px;
    vertical-align: middle;
}

.shopInfo_operation_item {
    display: flex;
    justify-content: center;
    align-items: center;
    flex: 1;
    height: 30px;
    font-size: 12px;
    margin-right: 10px;
    border: 1px solid #ddd;
    border-radius: 4px;
}

.shopInfo_operation_item image {
    width: 13px;
    height: 13px;
    margin-right: 4px;
    margin-bottom: 1px;
}

.shopInfo_operation_item.faved {
    color: #FF9602;
}

.shopInfo_operation_item:last-child {
    margin-right: 0;
}

.shopInfo .icon_global {
    width: 34px;
}

.shopInfo .icon_global_zy {
    width: 58px;
}

.shopInfo .icon_global,.shopInfo .icon_global_zy {
    position: relative;
    top: 2px;
    height: 14px;
    margin-left: 4px;
}

.shopInfo .icon_categShop {
    width: 55px;
    height: 13px;
    position: relative;
    top: 2px;
    left: 2px;
}

.shopInfo .icon_goodShop {
    width: 67.5px;
    height: 15px;
    position: relative;
    top: 2px;
    left: 4px;
}

.flag_coupon {
    position: relative;
    display: inline-block;
    vertical-align: middle;
    margin-top: -2px;
    box-sizing: border-box;
    line-height: 1;
    border-radius: 1px;
    padding: 3px 6px;
    font-size: 10px;
    color: #fff;
    background: #47c1c4;
}

.flag_coupon::before,.flag_coupon::after {
    content: '';
    position: absolute;
    top: 50%;
    width: 5px;
    height: 5px;
    border-radius: 3px;
    background: #fff;
    transform: translate(-50%,-50%);
}

.flag_coupon::before {
    left: 0;
}

.flag_coupon::after {
    right: -5px;
}

.flag_solid,.flag_hollow {
    display: inline-block;
    vertical-align: middle;
    margin-top: -2px;
    box-sizing: border-box;
    padding: 2px 3px;
    line-height: 1;
    font-size: 10px;
    border-radius: 2px;
}

.flag_solid {
    color: #fff;
    background: #E93B3D;
}

.flag_solid.green {
    background: #09bb07;
}

.shopInfo_name {
    display: flex;
    flex-direction: column;
}

.shopInfo_name_sub {
    display: flex;
    align-items: center;
    height: 14px;
    background: #f7f7f7;
    padding: 0 2px;
}

.shopInfo_name_sub_text {
    color: #666;
    font-size: 10px;
}

.shopInfo .star {
    display: flex;
    align-items: center;
    margin-left: 5px;
    width: 60px;
    height: 12px;
    background: url('https://img11.360buyimg.com/jdphoto/s24x24_jfs/t1/23430/9/3488/724/5c272315Ef87bcb2b/f3ce436e2b8c5378.png') repeat-x;
    background-size: 12px;
}

.shopInfo .star .num {
    height: 12px;
    background: url('https://img11.360buyimg.com/jdphoto/s24x24_jfs/t1/27154/34/3334/793/5c272315E64f5c93a/7edfd3a49ef25a2a.png') repeat-x;
    background-size: 12px;
}

.pingou .sku_name {
    display: block;
    font-size: 12px;
    width: 300rpx;
    overflow: hidden;
    text-overflow: ellipsis;
}

.pingou .pingou text {
    color: #999999;
}

.pingou .shop_details {
    margin-left: 20rpx;
    width: 40%;
}

.pingou .shopInfo_rectlogo {
    width: 180rpx;
    height: 60rpx;
    border-radius: 8rpx;
}

.pingou .shopInfo_squarelogo {
    width: 80rpx;
    height: 80rpx;
    border-radius: 8rpx;
}

.pingou .shopInfo_name_pingou {
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    width: 100%;
    height: 40rpx;
    -webkit-box-orient: vertical;
}

.pingou .more {
    float: right;
    width: 208rpx;
    height: 60rpx;
    line-height: 60rpx;
    color: #333333;
    border: 1px solid #CCCCCC;
    border-radius: 8rpx;
    text-align: center;
}

.light-gray {
    color: #999;
}