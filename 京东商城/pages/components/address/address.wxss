@import "../../../app.wxss";

.address {
    margin-top: 15px;
}

.address_detail {
    position: relative;
    margin-left: 10px;
    padding: 10px 0;
    border-bottom: 1rpx solid #EEE;
}

.address_detail_line {
    display: flex;
}

.address_detail_left {
    line-height: 7px;
    width: 40px;
    font-size: 12px;
    color: #999;
}

.address_detail_weight {
    margin-top: 2px;
}

.address_detail_content {
    display: block;
    width: 560rpx;
}

.address_detail_status {
    font-size: 12px;
    color: #999;
}

.address_detail_status text {
    color: #E93B3D;
}

.jx_address .address_detail_status text {
    color: #C09947;
}

.jx_address .xlist_icon_dots {
    background: #666666;
}

.jx_address .xlist_icon_dots::after,.jx_address .xlist_icon_dots::before {
    background: #666666;
}

.xlist_icon_dots,.xlist_icon_dots::before,.xlist_icon_dots::after {
    position: absolute;
    right: 10px;
    top: 50%;
    margin-top: -2px;
    width: 4px;
    height: 4px;
    border-radius: 2px;
    background: #999;
}

.xlist_icon_dots::before {
    content: '';
    right: 7px;
}

.xlist_icon_dots::after {
    content: '';
    right: 14px;
}

.xlist_icon_dots {
    top: 20px;
}

.detail_shop {
    position: relative;
    padding: 0 0 0 10px;
    font-size: 12px;
    min-height: 39px;
    display: flex;
}

.detail_shop_tit {
    min-width: 40px;
    font-size: 12px;
    color: #999;
    font-weight: 400;
    line-height: 41px;
}

.detail_shop_content {
    border-bottom: 1rpx solid #E5E5E5;
    line-height: 1.5;
    padding: 11px 20px 0 0;
}

.detail_shop_content_name {
    font-size: 14px;
    color: #333;
}

.detail_shop_content_tips {
    font-size: 14px;
    color: #E93B3D;
}

.detail_shop_content_detail .item {
    display: flex;
    padding: 0;
    margin-top: 5px;
    line-height: 1.5;
    position: relative;
}

.detail_shop_content_detail .icon_adds {
    position: relative;
    top: -2px;
    width: 20px;
    height: 20px;
    margin-right: 5px;
}

.detail_shop_content_detail .icon {
    width: 20px;
    height: 20px;
    display: inline-block;
    background: #f3f3f3;
    vertical-align: middle;
    margin-top: -2px;
    margin-right: 5px;
}

.detail_shop_content_detail .de_span {
    display: block;
    width: 100%;
    flex: 1;
    color: #999;
}