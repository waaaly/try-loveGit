@import "../../../../__wuBaseWxss__/4.wxss";

.list-item__header {
    font-size: 14px;
    font-weight: 700;
    margin: 15px 0 5px;
}

.sub-list {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    flex-wrap: wrap;
    padding-right: 15px;
}

.sub-list__item {
    width: 33.33%;
    padding: 10px;
    box-sizing: border-box;
    text-align: center;
}

.sub-list__img {
    position: relative;
    padding-top: 100%;
}

.sub-list__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.sub-list__name {
    margin-top: 5px;
    font-size: 12px;
    line-height: 1.3;
}