.my_logistics {
    position: relative;
    height: 140rpx;
    overflow: hidden;
}

.my_logistics_swiper {
    height: 140rpx;
}

.my_logistics::before {
    position: absolute;
    content: '';
    z-index: 100;
    pointer-events: none;
    left: 20rpx;
    height: 1px;
    right: 20rpx;
    top: 0;
    background-color: #e5e5e5;
}

@media only screen and (-webkit-min-device-pixel-ratio:2) {
    .my_logistics::before {
        -webkit-transform: scaleY(.5);
        -webkit-transform-origin: 50% 50%;
    }
}

@media only screen and (-webkit-min-device-pixel-ratio:3) {
    .my_logistics::before {
        -webkit-transform: scaleY(.333);
        -webkit-transform-origin: 50% 50%;
    }
}

.my_logistics_list {
    display: flex;
    flex-flow: row nowrap;
}

.my_logistics_item {
    flex: 1 0 0;
    position: relative;
    overflow: hidden;
    padding-right: 30rpx;
    height: 140rpx;
    background-color: #fff;
}

.my_logistics_item_img {
    position: absolute!important;
    top: 30rpx;
    left: 20rpx;
    width: 80rpx;
    height: 80rpx;
}

.my_logistics_item_num {
    transform: translateZ(0);
    position: absolute;
    left: 20rpx;
    top: 80rpx;
    width: 80rpx;
    height: 30rpx;
    line-height: 30rpx;
    text-align: center;
    font-size: 20rpx;
    white-space: nowrap;
    overflow: hidden;
    color: #fff;
    background-color: rgba(0,0,0,.5);
}

.my_logistics_item_state {
    line-height: 42rpx;
    margin-top: 30rpx;
    padding-left: 120rpx;
}

.my_logistics_item_type {
    margin-right: 20rpx;
    font-size: 28rpx;
    color: #E93B3D;
}

.my_logistics_item_date {
    font-size: 24rpx;
    color: #999;
}

.my_logistics_item_text {
    margin-top: 3rpx;
    line-height: 36rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 24rpx;
    color: #999;
    padding-left: 120rpx;
}