    background-size: 15px;
}

.my_header .vip.v0::after {
    content: '企业';
}

.my_header .vip.v1::before {
    background-position: 0 0;
}

.my_header .vip.v1::after {
    content: '注册';
}

.my_header .vip.v2::before {
    background-position: -20px 0;
}

.my_header .vip.v2::after {
    content: '铜牌';
}

.my_header .vip.v3::before {
    background-position: -40px 0;
}

.my_header .vip.v3::after {
