.edit_nick_alert_mask {
    position: fixed;
    left: 0;
    top: 0;
    bottom: 0;
    right: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.8);
    z-index: 898;
}

.edit_nick_alert_mask .my_alert {
    margin: 20px auto;
    width: 270px;
    border-radius: 2px;
    background-color: #fff;
}

.edit_nick_alert_mask .my_alert.fixed {
    z-index: 899;
    position: fixed;
    top: 50%;
    left: 50%;
    margin: 0;
    transform: translate3d(-50%,-50%,0);
}

.edit_nick_alert_mask .my_alert .my_alert_title {
    position: relative;
    margin-bottom: 15px;
    height: 45px;
    line-height: 45px;
    text-align: center;
    font-size: 16px;
    font-weight: normal;
    color: #333;
}

.edit_nick_alert_mask .my_alert .my_alert_title::after {
    content: "";
    position: absolute;
    z-index: 1;
    pointer-events: none;
    background-color: #ccc;
    height: 1px;
    left: 0;
    right: 0;
    bottom: 0;
    transform: scaleY(.5);
    transform-origin: 50% 100%;
}

.edit_nick_alert_mask .my_alert .my_alert_input {
    position: relative;
    display: flex;
    margin: 10px 15px;
    height: 45px;
    line-height: 45px;
    font-size: 14px;
}

.edit_nick_alert_mask .my_alert .my_alert_input::after {
    content: "";
    position: absolute;
    z-index: 1;
    pointer-events: none;
    background-color: #ccc;
    border: 1px solid #ddd;
    top: 0;
    left: 0;
    background: none;
    border-color: #ccc;
    right: -100%;
    bottom: -100%;
    transform: scale(.5);
    transform-origin: 0 0;
}

.edit_nick_alert_mask .my_alert .my_alert_input.type_disabled {
    background-color: #f2f2f7;
}

.edit_nick_alert_mask .my_alert .my_alert_input.type_disabled input {
    color: #999;
}

.edit_nick_alert_mask .my_alert .my_alert_input.type_alert {
    background-color: #fcebeb;
}

.edit_nick_alert_mask .my_alert .my_alert_input.type_alert::after,.edit_nick_alert_mask .my_alert .my_alert_input.type_alert .my_alert_input_label::after {
    border-color: #e93b3d;
}

.edit_nick_alert_mask .my_alert .my_alert_input.type_alert input {
    color: #e93b3d;
}

.edit_nick_alert_mask .my_alert .my_alert_input input {
    flex: 1;
    padding: 10px;
    border: none;
    color: #333;
    height: 25px;
    line-height: 25px;
    -webkit-appearance: none;
    background-color: transparent;
}

.edit_nick_alert_mask .my_alert .my_alert_input_label {
    position: relative;
    min-width: 120rpx;
    text-align: center;
    color: #999;
}

.edit_nick_alert_mask .my_alert .my_alert_input_label::after {
    z-index: 1;
    content: "";
    position: absolute;
    pointer-events: none;
    background-color: #ccc;
    width: 1px;
    top: 0;
    bottom: 0;
    right: 0;
    transform: scaleX(.5);
    transform-origin: 100% 50%;
}

.edit_nick_alert_mask .my_alert .my_alert_input_text {
    margin: 10px 15px 17px;
    font-size: 12px;
    color: #999;
}

.edit_nick_alert_mask .my_alert .my_alert_input_text.type_alert {
    color: #e93b3d;
}

.edit_nick_alert_mask .my_alert .my_alert_btns {
    position: relative;
    display: flex;
}

.edit_nick_alert_mask .my_alert .my_alert_btns::after {
    content: "";
    position: absolute;
    z-index: 1;
    pointer-events: none;
    background-color: #ccc;
    height: 1px;
    left: 0;
    right: 0;
    top: 0;
    transform: scaleY(.5);
    transform-origin: 50% 0;
}

.edit_nick_alert_mask .my_alert .my_alert_btn {
    position: relative;
    flex: 1;
    height: 40px;
    line-height: 40px;
    text-align: center;
    font-size: 16px;
    color: #333;
}

.edit_nick_alert_mask .my_alert .my_alert_btn.color_red {
    color: #e93b3d;
}

.edit_nick_alert_mask .my_alert .my_alert_btn:not(:first-child)::after {
    content: "";
    position: absolute;
    z-index: 1;
    pointer-events: none;
    background-color: #ccc;
    width: 1px;
    top: 0;
    bottom: 0;
    left: 0;
    transform: scaleX(.5);
    transform-origin: 0 50%;
}