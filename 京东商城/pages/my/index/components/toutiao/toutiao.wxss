.scroll_image img {
    width: 100%!important;
    height: 100%!important;
    object-fit: cover;
}

.scroll_image.wqvue-image img {
    transform: none;
    position: static;
}

.my_toutiao {
    position: relative;
    margin: 15px 0;
    padding-left: 10px;
    padding-right: 10px;
    height: 60px;
    background-color: #fff;
}

.my_toutiao .my_toutiao_notice {
    height: 60px;
    padding-right: 18px;
    position: relative;
    display: flex;
    align-items: center;
    overflow: hidden;
}

.my_toutiao .my_toutiao_notice .my_toutiao_notice_inner {
    height: 60px;
    overflow: hidden;
    flex: 1;
    padding-right: 20px;
}

.my_toutiao .my_toutiao_notice .my_toutiao_notice_inner .my_toutiao_notice_list {
    position: relative;
}

.my_toutiao .my_toutiao_notice .my_toutiao_notice_inner .my_toutiao_notice_list .my_toutiao_notice_list_item {
    height: 60px;
    display: flex;
    align-items: center;
}

.my_toutiao .my_toutiao_notice .my_toutiao_notice_inner .my_toutiao_notice_list .my_toutiao_notice_list_item .my_toutiao_notice_list_item_img {
    position: relative;
    width: 45px;
    height: 45px;
    margin-right: 8px;
    overflow: hidden;
}

.my_toutiao .my_toutiao_notice .my_toutiao_notice_inner .my_toutiao_notice_list .my_toutiao_notice_list_item .my_toutiao_notice_list_item_img .scroll_image {
    position: absolute;
    display: block;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
}

.my_toutiao .my_toutiao_notice .my_toutiao_notice_inner .my_toutiao_notice_list .my_toutiao_notice_list_item .my_toutiao_notice_list_item_text {
    flex: 1;
}

.my_toutiao .my_toutiao_notice .my_toutiao_notice_inner .my_toutiao_notice_list .my_toutiao_notice_list_item .my_toutiao_notice_list_item_text .my_toutiao_notice_list_item_text_title {
    height: 16px;
    background-image: url("https://wq.360buyimg.com/fd/h5/wxsq_dev/my/images/toutiao_title_f9547e31.png");
    background-size: auto 16px;
    background-repeat: no-repeat;
    margin-bottom: 6px;
    margin-left: 3px;
}

.my_toutiao .my_toutiao_notice .my_toutiao_notice_inner .my_toutiao_notice_list .my_toutiao_notice_list_item .my_toutiao_notice_list_item_text .my_toutiao_notice_list_item_text_info {
    display: flex;
    align-items: center;
}

.my_toutiao .my_toutiao_notice .my_toutiao_notice_inner .my_toutiao_notice_list .my_toutiao_notice_list_item .my_toutiao_notice_list_item_text .my_toutiao_notice_list_item_text_info .info_name {
    display: inline-flex;
    align-items: center;
    font-size: 10px;
    height: 16px;
    line-height: 16px;
    padding: 0 7px;
    border-radius: 8px;
    color: #FFFFFF;
    background-color: #E93B3D;
    margin-right: 8px;
}

.my_toutiao .my_toutiao_notice .my_toutiao_notice_inner .my_toutiao_notice_list .my_toutiao_notice_list_item .my_toutiao_notice_list_item_text .my_toutiao_notice_list_item_text_info .info_detail {
    flex: 1;
    width: 0;
    color: #333333;
    font-size: 12px;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.my_toutiao .my_toutiao_notice .my_toutiao_notice_dot {
    text-align: center;
    font-size: 12px;
    color: #fff;
    background-color: #e4393c;
    box-sizing: border-box;
    width: auto;
    min-width: 14px;
    padding: 0 4px;
    height: 14px;
    line-height: 14px;
    border-radius: 14px;
    position: relative;
}

.my_toutiao .my_toutiao_notice::after {
    content: '';
    display: inline-block;
    vertical-align: middle;
    margin-top: 0px;
    width: 6px;
    height: 10px;
    background-image: url("data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 12 20%22%3E%3Cpath fill=%22#CCCCCC%22 fill-rule=%22evenodd%22 d=%22M2 20c-.8 0-1.5-.5-1.8-1.2-.3-.8-.2-1.6.4-2.2L7.2 10 .6 3.4c-.8-.8-.8-2 0-2.8.8-.8 2-.8 2.8 0l8 8c.4.4.6 1 .6 1.4 0 .5-.2 1-.6 1.4l-8 8c-.4.4-1 .6-1.4.6z%22/%3E%3C/svg%3E");
    background-repeat: no-repeat;
    background-size: 100%;
    position: absolute;
    right: 8px;
    top: 50%;
    transform: translateY(-50%);
}