.mod_follow {
    margin: 15px 10px;
    position: relative;
    padding: 15px 10px 15px 60px;
    height: 45px;
    background-color: #fff;
    display: flex;
}

.mod_follow::before {
    position: absolute;
    left: 10px;
    content: "";
    width: 40px;
    height: 40px;
    background-position: 0 0;
    background: transparent url(https://img11.360buyimg.com/jdphoto/s122x80_jfs/t1/1652/2/14712/1474/5bdc2e78E758f9ca5/37139ab515b5d1c7.png) no-repeat;
    background-size: 61px auto;
}

.mod_follow .small-text {
    display: block;
    margin-top: 7.5px;
    color: #999;
    line-height: 1;
    font-size: 10px;
}

.mod_follow .name {
    width: 70px;
    font-size: 10px;
    color: #333;
    padding: 6px 0;
}

.mod_follow .follow {
    text-align: center;
    flex: 1;
}

.mod_follow .follow .btn_qr_my {
    padding: 0 10px;
    height: 30px;
    line-height: 30px;
    text-align: center;
    font-size: 12px;
    color: #fff;
    background-color: #e4393c;
    border-radius: 3px;
    box-sizing: border-box;
}

.mod_follow .follow .btn_qr_my::before {
    content: "";
    display: inline-block;
    vertical-align: middle;
    margin: -2px 10px 0 0;
    width: 20px;
    height: 20px;
    background: transparent url(https://img11.360buyimg.com/jdphoto/s122x80_jfs/t1/1652/2/14712/1474/5bdc2e78E758f9ca5/37139ab515b5d1c7.png) no-repeat;
    background-size: 61px auto;
    background-position: -41px 0;
}

.mod_qr_layer_my {
    z-index: 899;
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
}

.mod_qr_layer_my .inner {
    box-sizing: border-box;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    padding: 0 15px;
    width: 270px;
    text-align: center;
    border-radius: 6px;
    color: #333;
    background-color: #fff;
    overflow: hidden;
    box-shadow: 0 1px 10px 0 rgba(0,0,0,.3);
}

.mod_qr_layer_my .inner .close {
    padding: 12px;
    position: absolute;
    top: 0;
    right: 0;
    z-index: 2;
}

.mod_qr_layer_my .inner .close::after {
    content: "";
    display: block;
    width: 20px;
    height: 20px;
    background: url(data:image/png;base64,) 50% no-repeat;
    background-size: 11px auto;
}

.mod_qr_layer_my .inner .qr-title {
    font-size: 14px;
    margin: 12px 0 0px;
    display: block;
}

.mod_qr_layer_my .inner .qr-sub_title {
    font-size: 14px;
    margin: 4px 0 11px;
    display: block;
}

.mod_qr_layer_my .inner .qr {
    position: relative;
    margin: 11px auto 0;
    width: 120px;
    height: 120px;
    background: #fff;
    padding-bottom: 31px;
}

.mod_qr_layer_my .inner .qr .qr-image {
    box-sizing: border-box;
    display: block;
    width: 100%;
    height: 100%;
    border: 10px solid #f7f7f7;
    vertical-align: top;
}

.mod_qr_layer_my .inner .qr .tips {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 30px;
    line-height: 30px;
    background: #f7f7f7;
    color: #999;
    font-size: 12px;
    text-align: center;
}