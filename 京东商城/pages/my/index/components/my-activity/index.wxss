.activity-wrap {
    background: #fff;
    margin: 15px 0;
}

.tools_container {
    overflow: hidden;
    position: relative;
}

.tools_container::after {
    content: "";
    display: block;
    clear: both;
}

.transition {
    transition: height 0.5s;
}

.tools_item {
    padding: 10px 0 8px;
    text-align: center;
    height: 65px;
    box-sizing: border-box;
    float: left;
    width: 25%;
    position: relative;
}

.tools_item_key {
    font-size: 12px;
    color: #666;
    line-height: 20px;
}

.act_red_point {
    position: absolute;
    color: #fff;
    background: #e93b3d;
    font-size: 16rpx;
    padding: 0 8rpx;
    border-radius: 20rpx;
    top: 10rpx;
    right: 35rpx;
    height: 22rpx;
    line-height: 25rpx;
}

.tools_icon {
    display: block;
    margin: 0 auto 7px;
    width: 20px;
    height: 20px;
}

.get-more_wrap {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    text-align: center;
    background-color: #fff;
}

.get-more_item {
    position: relative;
}

.get-more_text {
    color: #333233;
    line-height: 40px;
    height: 40px;
    font-size: 14px;
}

.get-more_arrow {
    display: inline-block;
    width: 8px;
    height: 8px;
    border-top: 2px solid #CCCCCC;
    border-left: 2px solid #CCCCCC;
    transform-origin: 50%;
    transform: rotate(225deg);
    margin-left: 5px;
    position: relative;
    top: -3px;
}