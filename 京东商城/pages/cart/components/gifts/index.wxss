@import "../../../../__wuBaseWxss__/7.wxss";

.gifts_wrap {
    overflow: scroll;
    -webkit-overflow-scrolling: touch;
    height: 100%;
    background-color: #F7F7F7;
}

.gifts_wrap .tips {
    height: 64rpx;
    line-height: 64rpx;
    background: #F7F7F7;
    text-align: center;
}

.gifts_wrap .tips text {
    font: 24rpx;
    color: #999999;
}

.gifts_wrap .list_item {
    padding-bottom: 30rpx;
}

.gifts_wrap .list_item:last-child {
    padding-bottom: 98rpx;
}

.gifts_wrap .list_item_title {
    padding: 24rpx 20rpx;
    font-size: 32rpx;
    height: 42rpx;
    line-height: 42rpx;
    color: #333333;
    background: #fff;
}

.gifts_wrap .list_item_title::after {
    content: "";
    display: block;
    position: absolute;
    z-index: 1;
    pointer-events: none;
    background-color: #e5e5e5;
    height: 1rpx;
    right: 0;
    left: 20rpx;
    margin-top: 24rpx;
    -webkit-transform: scaleY(.5);
    -webkit-transform-origin: 50% 0;
}

.gifts_wrap .list_item_title_gray {
    color: #999;
}

.gifts_wrap .goods.main .checkbox {
    display: none;
}

.gifts_wrap .goods.main .goods_image {
    padding-left: 0;
}

.gifts_wrap .goods.main .goods_content {
    padding-left: 0;
    width: calc(100vw - 172rpx);
}

.gifts_wrap .goods {
    position: relative;
    padding: 30rpx 20rpx;
    display: flex;
    background: #fff;
}

.gifts_wrap .goods .checkbox {
    height: 170rpx;
    width: 80rpx;
    z-index: 1;
}

.gifts_wrap .goods .goods_image {
    width: 150rpx;
    padding-left: 60rpx;
}

.gifts_wrap .goods .goods_image image {
    width: 150rpx;
    height: 150rpx;
}

.gifts_wrap .goods .goods_content {
    min-height: 150rpx;
    padding-left: 10rpx;
    width: calc(100vw - 256rpx);
}

.gifts_wrap .goods .goods_content_name {
    font-size: 28rpx;
    font-weight: 400;
    color: #333333;
}

.gifts_wrap .goods .goods_content_line {
    display: flex;
    margin-top: 10rpx;
    align-items: center;
    -webkit-box-pack: justify;
    -webkit-box-align: center;
    justify-content: space-between;
}

.gifts_wrap .goods .goods_content_line_price {
    flex: 1;
    font-size: 20rpx;
    color: #e4393c;
}

.gifts_wrap .goods .goods_content_line_price text {
    font-size: 32rpx;
}

.gifts_wrap .goods .goods_content_line_price .arrow_btm {
    position: relative;
    display: inline-block;
    width: 20rpx;
    height: 40rpx;
    vertical-align: top;
    margin: 0 0 0 10rpx;
}

.gifts_wrap .goods .goods_content_line_price .arrow_btm::after {
    content: '';
    vertical-align: middle;
    margin-top: 8rpx;
    display: inline-block;
    box-sizing: border-box;
    width: 14rpx;
    height: 14rpx;
    border-top: 2rpx solid #ccc;
    border-right: 2rpx solid #ccc;
    transform-origin: 50% 50%;
    transform: rotate(135deg);
}

.gifts_wrap .goods .goods_content_line_num {
    width: 214rpx;
    overflow: hidden;
    text-align: right;
}

.gifts_wrap .goods .goods_content_line_num text {
    padding-right: 20rpx;
    color: #999;
    font-size: 24rpx;
}

.gifts_wrap .goods .goods_content_limit {
    position: relative;
    margin: 10rpx 0 10rpx -20rpx;
    height: 24rpx;
    color: #999;
    font-size: 0;
    text-align: right;
}

.gifts_wrap .goods .goods_content_limit text {
    line-height: 1em;
    font-size: 24rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    white-space: nowrap;
    display: block;
}

.gifts_wrap .bottom_bar {
    position: fixed;
    z-index: 10;
    bottom: 0;
    left: 0;
    right: 0;
    height: 98rpx;
    line-height: 98rpx;
    text-align: center;
    background: #e93b3d;
    display: flex;
    padding-bottom: constant(safe-area-inset-bottom);
    padding-bottom: env(safe-area-inset-bottom);
}

.gifts_wrap .bottom_bar>text {
    font-size: 32rpx;
    color: #FFFFFF;
    flex: 1;
}

.gifts_wrap .bottom_bar.summary {
    background: #ffffff;
    text-align: right;
}

.gifts_wrap .bottom_bar.summary .bottom_bar_content {
    flex: 1;
    padding-right: 20rpx;
    text-align: right;
    line-height: 1.4;
    display: flex;
    justify-content: flex-end;
    align-items: center;
}

.gifts_wrap .bottom_bar.summary .bottom_bar_content_selected {
    font-size: 32rpx;
    font-weight: 700;
    color: #333333;
}

.gifts_wrap .bottom_bar.summary .bottom_bar_content_selected text {
    color: #e93b3d;
}

.gifts_wrap .bottom_bar.summary .bottom_bar_content_num {
    display: block;
    font-size: 20rpx;
    color: #999999;
}

.gifts_wrap .bottom_bar.summary .bottom_bar_submit {
    width: 218rpx;
    height: 98rpx;
    line-height: 98rpx;
    text-align: center;
    font-size: 32rpx;
    color: #fff;
    background-color: #e93b3d;
}

.input_mask {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 100;
}

@-webkit-keyframes icon_loading {
    0% {
        transform: rotate(0deg);
    }

    50% {
        transform: rotate(180deg);
    }

    100% {
        transform: rotate(1turn);
    }
}

@keyframes icon_loading {
    0% {
        transform: rotate(0deg);
    }

    50% {
        transform: rotate(180deg);
    }

    100% {
        transform: rotate(1turn);
    }
}

.checkbox {
    position: absolute;
    top: 0;
    left: 0;
    width: 84rpx;
    height: 86rpx;
}

.checkbox.checked::after {
    background-image: url(https://img11.360buyimg.com/jdphoto/s40x40_jfs/t19963/40/1627697203/369/195de517/5b226ae2N3a8765b3.png);
}

.checkbox.loading::after {
    margin-top: -20rpx;
    background-image: url(data:image/png;base64,);
    animation: icon_loading .8s linear infinite;
}

.checkbox::after {
    content: "";
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(0,-50%);
    width: 40rpx;
    height: 40rpx;
    margin-left: -20rpx;
    background-image: url(https://img11.360buyimg.com/jdphoto/s40x40_jfs/t24001/317/8605566/386/90ae9225/5b226ae2Nb0531918.png);
    background-size: 40rpx;
    background-color: #fff;
}

.checkbox.disabled::after {
    background-image: url(https://img11.360buyimg.com/jdphoto/s40x40_jfs/t25462/264/1268371245/1323/8bcf081/5b90a530Ne12bd695.png);
}

.number_picker {
    position: relative;
    background-color: #f7f7f7;
    border: none;
    line-height: 60rpx;
    height: 60rpx;
    border-radius: 8rpx;
}

.number_picker_minus,.number_picker_plus {
    position: relative;
    float: left;
    width: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
}

.number_picker_minus.disabled::after,.number_picker_plus.disabled::before,.number_picker_plus.disabled::after {
    background: hsla(0,0%,80%,.3);
}

.number_picker_minus::after,.number_picker_plus::after,.number_picker_plus::before {
    position: absolute;
    left: 50%;
    top: 50%;
    content: "";
    display: block;
    width: 32rpx;
    height: 4rpx;
    margin: -2rpx 0 0 -16rpx;
    background: #999;
    border-radius: 2rpx;
}

.number_picker_plus::before {
    width: 4rpx;
    height: 32rpx;
    margin: -16rpx 0 0 -2rpx;
    border-radius: 2rpx;
}

.number_picker_input {
    position: relative;
    float: left;
    display: inline-block;
    vertical-align: middle;
    width: 90rpx;
    height: 60rpx;
    text-align: center;
    box-sizing: border-box;
    font-size: 28rpx;
    font-weight: 400;
    border-left: 1rpx solid #fff;
    border-right: 1rpx solid #fff;
    color: #333333;
}