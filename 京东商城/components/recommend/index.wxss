@import "../../__wuBaseWxss__/7.wxss";

@import "../../__wuBaseWxss__/5.wxss";

.mod_recommend {
    position: relative;
    overflow: hidden;
    margin: 30rpx 0;
    background: #F7F7F7;
    padding-bottom: constant(safe-area-inset-bottom);
    padding-bottom: env(safe-area-inset-bottom);
}

.mod_recommend_title {
    margin: 24rpx 30rpx 36rpx;
    position: relative;
    height: 1rpx;
    background: #ccc;
    z-index: 0;
    top: 50%;
}

.mod_recommend_title_text {
    padding: 0 30rpx;
    position: absolute;
    top: 0;
    left: 50%;
    transform: translate(-50%,-50%);
    z-index: 1;
    color: #999999;
    background: #F7F7F7;
    font-size: 12px;
}

.mod_recommend_title_text::before {
    content: "";
    position: absolute;
    left: 0;
    top: 50%;
    transform: rotate(45deg);
    margin-top: -4rpx;
    width: 8rpx;
    height: 8rpx;
    background: #ccc;
}

.mod_recommend_title_text::after {
    content: "";
    display: block;
    position: absolute;
    margin-top: -4rpx;
    right: 0;
    top: 50%;
    transform: rotate(45deg);
    width: 8rpx;
    height: 8rpx;
    background: #ccc;
}

.mod_recommend_bgtitle {
    margin: -6rpx 30rpx 20rpx;
    background: #ccc;
    z-index: 0;
}

.mod_recommend_bgtitle_bgtext {
    text-align: center;
    height: 60rpx;
    line-height: 60rpx;
}

.mod_recommend_list {
    width: 100vw;
    height: 100%;
    padding-right: 1rpx;
    overflow: hidden;
    background: #F7F7F7;
    display: flex;
    flex-wrap: wrap;
}

.mod_recommend_list.list2 .col {
    width: 50%;
}

.mod_recommend_list.list2 .col .mod_recommend_list_item {
    width: 100%;
}

.mod_recommend_list.list2 .col:last-child .mod_recommend_list_item {
    border-left: 2rpx solid #F7F7F7;
}

.mod_recommend_list_item {
    position: relative;
    width: 50%;
    border-bottom: 2rpx solid #F7F7F7;
    background: #fff;
    box-sizing: border-box;
    padding: 30rpx 30rpx 20rpx 30rpx;
    display: inline-block;
}

.mod_recommend_list_item .mrli_cover {
    position: relative;
    width: 100%;
    box-sizing: border-box;
    height: 315rpx;
    overflow: hidden;
    border-radius: 4rpx;
}

.mod_recommend_list_item .mrli_cover .yuyue_belt {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 44rpx;
    opacity: 0.7;
    background: #E93B3D;
    text-align: center;
    line-height: 44rpx;
    color: #FFF;
    font-size: 24rpx;
}

.mod_recommend_list_item .mrli_cover .tag {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 50rpx;
    background-repeat: 50%;
    background-image: url(https://img11.360buyimg.com/jdphoto/s335x50_jfs/t18751/292/522134345/20440/a6f5de14/5a9383cdNd72b2a30.png);
    background-size: 335rpx 50rpx;
    font-size: 20rpx;
    color: #fff;
    box-sizing: border-box;
    text-align: center;
}

.mod_recommend_list_item .mrli_cover .tag text {
    box-sizing: border-box;
    position: absolute;
    top: 10rpx;
    left: 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    line-height: 50rpx;
    padding: 0 10rpx;
    width: 100%;
}

.mod_recommend_list_item .mrli_cover .pre_price text {
    width: 220rpx;
}

.mod_recommend_list_item .mrli_cover .price_wrap {
    position: absolute;
    bottom: 0;
    right: 10rpx;
    height: 97rpx;
    width: 92rpx;
    background: url(https://img11.360buyimg.com/jdphoto/s92x97_jfs/t19765/298/490294292/6682/6bb88760/5a936decNa6bbaa56.png) no-repeat 50%;
    background-size: 92rpx 97rpx;
    color: #F952B1;
    text-align: center;
}

.mod_recommend_list_item .mrli_cover .price_wrap .title {
    font-size: 14rpx;
    padding: 22rpx 10rpx 0;
    line-height: 12rpx;
}

.mod_recommend_list_item .mrli_cover .price_wrap .price {
    font-size: 24rpx;
    padding: 4rpx 10rpx 0 4rpx;
    line-height: 20rpx;
}

.mod_recommend_list_item .mrli_cover .price_wrap .price::before {
    content: "ï¿¥";
    font-size: 12rpx;
}

.mod_recommend_list_item .mrli_cover .price_wrap .price .cents {
    font-size: 12rpx;
    display: inline;
}

.mod_recommend_list_item .mrli_cover .price_wrap .date {
    font-size: 12rpx;
    line-height: 10rpx;
    padding: 0 10rpx 0 14rpx;
}

.mod_recommend_list_item .mrli_cover image {
    display: block;
    width: 315rpx;
    height: 315rpx;
    position: absolute;
    left: 0;
    top: 0;
    border: 0 none;
}

.mod_recommend_list_item .mrli_cover .corner_mark {
    height: 60rpx;
    width: 60rpx;
    position: absolute;
    background-repeat: 50%;
    background-size: 60rpx;
    bottom: 0;
    right: 0;
}

.mod_recommend_list_item .mrli_info {
    position: relative;
    color: #333333;
}

.mod_recommend_list_item .mrli_info_name {
    padding: 25rpx 0 0 0;
    font-size: 24rpx;
    color: #333;
    line-height: 36rpx;
    height: 72rpx;
    word-break: break-all;
    word-wrap: break-word;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow-wrap: break-word;
}

.mod_recommend_list_item .mrli_info_name .icon {
    position: relative;
    top: 6rpx;
    display: inline-block;
    margin-right: 14rpx;
}

.mod_recommend_list_item .mrli_info_price {
    color: #e93b3d;
    font-size: 24rpx;
    font-weight: 700;
    vertical-align: middle;
}

.mod_recommend_list_item .mrli_info_price text {
    font-size: 32rpx;
    margin-left: -4rpx;
}

.mod_recommend_list_item .mrli_info_price .daifabu {
    font-size: 28rpx;
}

.mod_recommend_list_item .mrli_info_buy {
    position: absolute;
    bottom: 0;
    right: 0;
    width: 60rpx;
    height: 48rpx;
    background: url(https://img11.360buyimg.com/jdphoto/s30x30_jfs/t15400/50/1963422520/264/2a2e0ae5/5a615cf0N003d3951.png) no-repeat 50%;
    background-size: 30rpx;
}

.mod_recommend_list_item .mrli_info_more {
    position: absolute;
    top: 0;
    right: 0;
    width: 60rpx;
    height: 48rpx;
    background: url(https://img11.360buyimg.com/jdphoto/s30x6_jfs/t17233/6/2560314360/179/3041ac5d/5afd3bf4N12bc82b4.png) no-repeat 50%;
    background-size: 30rpx;
}

.mod_recommend_list_item .mrli_info .price {
    display: inline-block;
    vertical-align: middle;
    margin-right: 10rpx;
}

.mod_recommend_list_item .mrli_info .price .pinggou_count {
    font-size: 24rpx;
    color: #E93B3D;
    margin-left: 0;
    font-weight: normal;
}

.mod_recommend_list_item .mrli_info .promotion_tip {
    display: inline-block;
    height: 28rpx;
    vertical-align: middle;
    line-height: calc(14px1rpx);
    font-size: 20rpx;
    box-sizing: border-box;
    padding: 0 4rpx;
    position: relative;
    margin-left: 0;
}

.mod_recommend_list_item .mrli_info .promotion_tip::before {
    position: absolute;
    content: "";
    top: 0;
    left: 0;
    width: 200%;
    height: 200%;
    border: 1px solid #e93b3d;
    box-sizing: border-box;
    transform-origin: 0 0;
    transform: scale(0.5);
    border-radius: 4px;
}

.mod_recommend_list_item .mrli_info .plus_price {
    display: inline-block;
    font-size: 24rpx;
    color: #333333;
    letter-spacing: 0;
    line-height: 36rpx;
    vertical-align: middle;
}

.mod_recommend_list_item .mrli_info .plus_price::after {
    content: "";
    position: relative;
    display: inline-block;
    vertical-align: middle;
    margin: -4rpx 0 0 4rpx;
    width: 58rpx;
    height: 20rpx;
    background: #fff url(https://img11.360buyimg.com/jdphoto/s58x20_jfs/t15538/324/1941363887/916/bb0fe712/5a6ee4e9Ne455b5b0.png) 50% no-repeat;
    background-size: 58rpx 20rpx;
}

.mod_recommend_list_item .mrli_info .miaosha_origin_price {
    display: inline-block;
    font-size: 24rpx;
    line-height: 36rpx;
    vertical-align: middle;
    text-decoration: line-through;
    color: #cccccc;
    font-weight: normal;
    margin-left: 10rpx;
}

.mod_recommend_list_item .mrli_mark {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
}

.mod_recommend_list_item .mrli_mark .sheld,.mod_recommend_list_item .mrli_mark .ctn {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.mod_recommend_list_item .mrli_mark .sheld {
    background-color: #FFF;
    opacity: 0.8;
    z-index: 1;
}

.mod_recommend_list_item .mrli_mark .ctn {
    background-color: transparent;
    z-index: 2;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.mod_recommend_list_item .mrli_mark .ctn .item {
    width: 172rpx;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 30rpx;
    font-size: 28rpx;
    text-align: center;
    margin: 20rpx 0;
}

.mod_recommend_list_item .mrli_mark .ctn .similar {
    color: #FFF;
    top: 180rpx;
    background-image: linear-gradient(90deg,#E93B3D 0%,#FF9574 100%);
    box-shadow: 0 5rpx 10rpx 0 rgba(233,59,61,0.2);
}

.mod_recommend_list_item .mrli_mark .ctn .dislike {
    color: #333;
    bottom: 179rpx;
    background-color: #FFF;
    box-shadow: 0 5rpx 10rpx 0 rgba(0,0,0,0.05);
}

.mod_recommend_list_item .mrli_mark .ctn .close {
    position: absolute;
    bottom: 0;
    right: 0;
    padding-right: 32rpx;
    padding-bottom: 32rpx;
    width: 26rpx;
    height: 26rpx;
}

.mod_recommend_list_item .mrli_reason {
    display: inline-block;
    background-color: #F1F7FE;
    border-radius: 4rpx;
    line-height: 28rpx;
    font-size: 20rpx;
    color: #4B9BF8;
}

.mod_recommend_list_item .mrli_black_point {
    position: absolute;
    right: 2rpx;
    bottom: 2rpx;
    width: 2rpx;
    height: 2rpx;
    background-color: #999;
    border-radius: 1rpx;
    z-index: 1;
    opacity: 0.5;
}

.mod_recommend_list_item .flex_wrap .mrli_info_price {
    flex: 1;
}

.mod_recommend_list_item .flex_wrap .plus_price {
    display: block;
}

.mod_recommend_list_item .flex_wrap .pinggou_jd_price {
    display: block;
    text-decoration: line-through;
    font-size: 24rpx;
    color: #cccccc;
    font-weight: normal;
}

.mod_recommend_list_item .flex_wrap .miaosha_origin_price {
    display: block;
}

.mod_recommend_list .odd_border {
    border-left: 2rpx solid #F7F7F7;
}

.rec_title {
    margin: 36rpx 0 24rpx;
    text-align: center;
    height: 1px;
    background: #FFBCBD;
    position: relative;
}

.rec_title_text {
    font-size: 28rpx;
    color: #333333;
    background: #F7F7F7;
    position: absolute;
    top: 0;
    left: 50%;
    transform: translate(-50%,-50%);
    padding: 0 32rpx;
    max-width: 224rpx;
}

.rec_title_text::before {
    content: "";
    position: absolute;
    left: 8rpx;
    top: 50%;
    transform: rotate(45deg);
    margin-top: -2rpx;
    width: 10rpx;
    height: 10rpx;
    background: #FFBCBD;
}

.rec_title_text::after {
    content: "";
    display: block;
    position: absolute;
    margin-top: -2rpx;
    right: 8rpx;
    top: 50%;
    transform: rotate(45deg);
    width: 10rpx;
    height: 10rpx;
    background: #FFBCBD;
}

.rec_desp {
    font-size: 20rpx;
    color: #999999;
    text-align: center;
    line-height: 30rpx;
}

.rec_topic {
    font-size: 20rpx;
    color: #333333;
    letter-spacing: 0;
    text-align: center;
    line-height: 30rpx;
    margin-top: 10rpx;
}

.rec_topic_inline {
    border: 1px solid #333333;
    border-radius: 100rpx;
    padding: 2rpx 18rpx;
    display: inline-block;
    max-width: 200rpx;
}

.line1 {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.gray_bg {
    background: #F7F7F7!important;
}