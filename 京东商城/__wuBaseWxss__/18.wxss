.line1 {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.line2,.line3 {
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.line3 {
    -webkit-line-clamp: 3;
}

.floor-title {
    font-size: 32rpx;
    font-weight: bold;
    padding: 0 30rpx;
    position: relative;
    height: 92rpx;
    line-height: 92rpx;
    background-color: #fff;
}

.floor-title__more {
    font-size: 24rpx;
    color: #999;
    position: absolute;
    right: 30rpx;
    top: 0;
    font-weight: normal;
}

.floor-title__more::after {
    content: '';
    display: inline-block;
    vertical-align: middle;
    margin: -4rpx 0 0 15rpx;
    width: 12rpx;
    height: 20rpx;
    background: url('https://img11.360buyimg.com/jdphoto/s12x20_jfs/t20179/270/1237687656/165/4b7f0f5f/5b23343eN7c1ce3b0.png') no-repeat;
    background-size: 100%;
}

.bg_stamp {
    background-image: url('https://img11.360buyimg.com/jdphoto/s100x100_jfs/t23008/197/27787722/917/d1efc2bd/5b233483N97ab20b3.png');
    background-repeat: no-repeat;
    background-position: 50%;
    background-size: 50px;
}