.xmodal_mask {
    position: fixed;
    z-index: 1000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0,0,0,.6);
}

.xmodal_content {
    position: fixed;
    z-index: 5000;
    width: 80%;
    max-width: 300px;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    background-color: #fff;
    text-align: center;
    border-radius: 12rpx;
    overflow: hidden;
}

.xmodal_hd {
    padding: 0;
}

.xmodal_title {
    font-weight: 400;
    font-size: 32rpx;
    padding: 20rpx;
    color: #333;
    position: relative;
}

.xmodal_title::before {
    content: "";
    position: absolute;
    z-index: 1;
    pointer-events: none;
    background-color: #e5e5e5;
    height: 2rpx;
    left: 0;
    right: 0;
    bottom: 0;
}

.xmodal_sub_title {
    color: #999;
    display: block;
    font-size: 24rpx;
}

.xmodal_bd {
    padding: 0 1.6em .8em;
    min-height: 80rpx;
    font-size: 32rpx;
    word-wrap: break-word;
    word-break: break-all;
    color: #999999;
}

.xmodal_bd .line {
    display: block;
    margin-bottom: 4px;
}

.xmodal_bd_item {
    text-align: left;
    color: #333;
    height: 50rpx;
    line-height: 50rpx;
    margin: 30rpx;
}

.xmodal_bd_item .summary {
    font-size: 24rpx;
    line-height: 40rpx;
}

.xmodal_bd_item .summary .price {
    display: inline-block;
    color: #e93b3d;
}

.xmodal_bd_item .check_box {
    position: relative;
    margin-left: -80rpx;
    top: 4rpx;
    height: 0;
}

.xmodal_bd_item .checkbox {
    position: relative;
    margin-left: -80rpx;
    top: 18rpx;
    height: 0;
}

.xmodal_ft {
    position: relative;
    line-height: 96rpx;
    font-size: 36rpx;
    display: flex;
}

.xmodal_ft:after {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 2rpx;
    border-top: 2rpx solid #d5d5d6;
    color: #d5d5d6;
    transform-origin: 0 0;
    transform: scaleY(0.5);
}

.xmodal_btn {
    display: block;
    flex: 1;
    color: #3cc51f;
    text-decoration: none;
    -webkit-tap-highlight-color: rgba(0,0,0,0);
    height: 88rpx;
    line-height: 88rpx;
    background: #fff;
    color: #333;
    font-size: 14px;
    position: relative;
}

.xmodal_btn:active {
    background-color: #eee;
}

.xmodal_btn:after {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    width: 2rpx;
    bottom: 0;
    border-left: 2rpx solid #d5d5d6;
    color: #d5d5d6;
    transform-origin: 0 0;
    transform: scaleX(0.5);
}

.xmodal_btn:first-child:after {
    display: none;
}

.xmodal_btn.default {
    color: #353535;
}

.xmodal_btn.primary {
    color: #e93b3d;
}