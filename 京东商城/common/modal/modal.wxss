.xmodal_mask {
    position: fixed;
    z-index: 1000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0,0,0,.6);
}

.xmodal_content {
    position: fixed;
    z-index: 5000;
    width: 80%;
    max-width: 300px;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    background-color: #fff;
    text-align: center;
    border-radius: 3px;
    overflow: hidden;
}

.xmodal_hd {
    padding: 1.3em 1.6em .5em;
}

.xmodal_title {
    font-weight: 400;
    font-size: 18px;
}

.xmodal_bd {
    padding: 0 1.6em .8em;
    min-height: 40px;
    max-height: 360px;
    font-size: 15px;
    line-height: 1.3;
    word-wrap: break-word;
    word-break: break-all;
    color: #999999;
    -webkit-overflow-scrolling: touch;
    overflow: hidden;
    overflow-y: auto;
}

.xmodal_bd:first-child {
    padding: 2.7em 20px 1.7em;
    color: #353535;
}

.xmodal_bd.left {
    text-align: left;
}

.xmodal_bd.right {
    text-align: right;
}

.xmodal_bd .line {
    display: block;
    margin-bottom: 4px;
}

.xmodal_tip {
    margin-top: 5px;
}

.xmodal .freight {
    padding-left: 15px;
    padding-right: 15px;
}

.xmodal .same_stock_wrapper {
    border-top: 1px solid #e5e5e5;
}

.xmodal .same_stock_wrapper .xmodal_goods+.xmodal_goods {
    margin-top: 10px;
}

.xmodal .same_stock_wrapper .xmodal_goods_layout {
    border-top: 1px solid #e5e5e5;
    padding-top: 15px;
}

.xmodal .same_stock {
    padding-bottom: 15px;
}

.xmodal .same_stock .xmodal_goods+.xmodal_goods {
    margin-top: 10px;
}

.xmodal .same_stock_title {
    font-size: 14px;
    line-height: 21px;
    margin-bottom: 15px;
    display: flex;
    align-items: center;
    align-content: center;
    padding-top: 11.5px;
    color: #333;
}

.xmodal .same_stock_title:not(:first-of-type) {
    border-top: 1px solid #e5e5e5;
    margin-top: 15px;
}

.xmodal .same_stock_title .same_stock_sign {
    color: #E93B3D;
    border: 1px solid #E93B3D;
    border-radius: 4px;
    height: 14px;
    line-height: 14px;
    font-size: 10px;
    width: 44px;
    line-height: 14px;
    text-align: center;
    margin-right: 5px;
}

.xmodal .goods {
    padding-left: 10px;
    padding-right: 10px;
}

.xmodal .goods .icon_sams {
    width: 28px;
    height: 14px;
    margin-bottom: -1px;
    margin-right: 4px;
}

.xmodal .goods .icon_gift {
    height: 14px;
    display: inline-block;
    margin-top: -2px;
    box-sizing: border-box;
    padding: 2px 4px;
    font-size: 12px;
    color: #fff;
    border-radius: 2px;
    margin-right: 4px;
    line-height: 1;
    vertical-align: middle;
    background: #E93B3D;
}

.xmodal_store {
    line-height: 1.5;
    margin-top: 10px;
}

.xmodal_store .name {
    font-size: 14px;
    color: #333;
}

.xmodal_store .li {
    position: relative;
    font-size: 12px;
    padding-left: 10px;
}

.xmodal_store .li::before {
    content: " ";
    position: absolute;
    left: 2px;
    top: 50%;
    transform: translate(0,-50%);
    display: block;
    width: 2px;
    height: 2px;
    background: #ddd;
    border-radius: 50%;
    z-index: 100;
}

.xmodal_store .discount_list {
    position: relative;
    padding-bottom: 15px;
}

.xmodal_store .discount_list .name {
    font-size: 14px;
    color: #333;
}

.xmodal_store .discount_list .discount {
    position: relative;
    display: flex;
    justify-content: space-between;
    font-size: 12px;
    line-height: 30px;
    padding-left: 10px;
}

.xmodal_store .discount_list .discount .price {
    color: #E93B3D;
}

.xmodal_store .discount_list .discount::before {
    content: " ";
    position: absolute;
    left: 2px;
    top: 50%;
    transform: translate(0,-50%);
    display: block;
    width: 2px;
    height: 2px;
    background: #ddd;
    border-radius: 50%;
    z-index: 100;
}

.xmodal_store .discount_sum {
    display: flex;
    justify-content: flex-end;
    font-size: 12px;
    line-height: 30px;
}

.xmodal_store .discount_sum .price {
    color: #E93B3D;
}

.xmodal_ps {
    font-size: 12px;
    margin-top: 10px;
}

.xmodal_ps text {
    color: #E93B3D;
}

.xmodal_goods {
    position: relative;
    min-height: 75px;
}

.xmodal_goods .goods_image {
    position: absolute;
    top: 0;
    left: 0;
    width: 75px;
    height: 75px;
}

.xmodal_goods .goods_info {
    margin-left: 95px;
}

.xmodal_goods .name {
    font-size: 12px;
    line-height: 1.5;
    color: #333333;
}

.xmodal_goods .name .icon_global {
    width: 32px;
    height: 14px;
    margin-bottom: -1px;
    margin-right: 4px;
}

.xmodal_goods .name .icon_global_self {
    width: 58px;
    height: 14px;
    margin-bottom: -1px;
    margin-right: 4px;
}

.xmodal_goods .name .icon_global_new {
    width: 44px;
    height: 14px;
    margin-bottom: -1px;
    margin-right: 4px;
}

.xmodal_goods .name .icon_global_self_new {
    width: 69px;
    height: 14px;
    margin-bottom: -1px;
    margin-right: 4px;
}

.xmodal_goods .sum {
    margin-top: 10px;
    display: flex;
}

.xmodal_goods .sum .price_label {
    font-size: 12px;
}

.xmodal_goods .sum .tax_price {
    flex: 1;
    color: #E93B3D;
    font-size: 12px;
}

.xmodal_goods .price {
    flex: 1;
    color: #E93B3D;
    font-size: 8px;
}

.xmodal_goods .price text {
    font-size: 14px;
}

.xmodal_goods .num {
    width: 40px;
    text-align: right;
    font-size: 10px;
}

.xmodal .tax_tips {
    width: 100%;
    height: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 11px;
    margin-top: 15px;
}

.xmodal .tax_tips image {
    margin-left: 5px;
    width: 15px;
    height: 15px;
}

.xmodal_goods2 {
    position: relative;
    min-height: 85px;
}

.xmodal_goods2 .sum {
    margin-top: 5px;
    display: flex;
}

.xmodal_goods2 .price {
    flex: 1;
    color: #333333;
    font-size: 12px;
}

.xmodal_goods2 .price text {
    color: #E93B3D;
}

.xmodal_goods2 .price2 {
    flex: 1;
    color: #CCCCCC;
    font-size: 12px;
    text-decoration: line-through;
}

.xmodal_ft {
    position: relative;
    line-height: 48px;
    font-size: 18px;
    display: flex;
}

.xmodal_ft:after {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 1px;
    border-top: 1px solid #d5d5d6;
    color: #d5d5d6;
    transform-origin: 0 0;
    transform: scaleY(0.5);
}

.xmodal_btn {
    display: block;
    flex: 1;
    color: #3cc51f;
    text-decoration: none;
    -webkit-tap-highlight-color: rgba(0,0,0,0);
    position: relative;
}

.xmodal_btn:active {
    background-color: #eee;
}

.xmodal_btn:after {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    width: 1px;
    bottom: 0;
    border-left: 1px solid #d5d5d6;
    color: #d5d5d6;
    transform-origin: 0 0;
    transform: scaleX(0.5);
}

.xmodal_btn:first-child:after {
    display: none;
}

.xmodal_btn.default {
    color: #353535;
}

.xmodal_btn.primary {
    color: #0BB20C;
}