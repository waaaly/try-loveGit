.container {
    height: 100%;
    position: relative;
    background-image: url("https://grtimg.oss-cn-beijing.aliyuncs.com/temp/wish_bg.png");
    background-repeat: no-repeat;
    background-size: 100% 100%;
}

.inner {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    overflow: hidden;
}

.wishes-panel {
    position: relative;
    width: 560rpx;
    height: 754rpx;
    padding: 170rpx 90rpx 0;
    font-size: 34rpx;
    color: #424242;
}

.wishes-panel .bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.userinfo {
    position: relative;
    display: flex;
    justify-content: center;
    height: 120rpx;
}

.userinfo-avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
}

.to-name {
    position: relative;
    margin-top: 30rpx;
    width: 100%;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.best-wishes {
    position: relative;
    width: 100%;
    margin-top: 30rpx;
    text-align: justify;
    height: 180rpx;
    line-height: 45rpx;
}

.from-name {
    position: relative;
    margin-top: 145rpx;
    text-align: right;
    width: 100%;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.date {
    position: relative;
    font-size: 28rpx;
    text-align: right;
    margin-top: 10rpx;
}

.btns {
    position: relative;
    display: flex;
    justify-content: space-between;
    width: 686rpx;
    padding: 80rpx 30rpx 0;
}

.btns button {
    width: 294rpx;
    height: 88rpx;
}

.btns button::after {
    display: none;
}

.btns .change-btn {
    color: #e8c478;
    border: 3rpx solid #e8c478;
    background-color: #d93c48;
}

.btns .finish-btn,.btns .share-btn,.btns .custom-btn {
    color: #fff;
    border: 3rpx solid #e8c478;
    background-color: #e8c478;
    line-height: 88rpx;
}

.btns .button-hover {
    opacity: 0.6;
}

.copy-right {
    display: flex;
    justify-content: center;
    text-align: center;
    font-size: 26rpx;
    color: #fff;
    line-height: 45rpx;
    position: fixed;
    bottom: 25rpx;
}

.copy-right .h3 {
    font-size: 35rpx;
    color: #fff;
}

.copy-right .h4 {
    font-size: 30rpx;
    color: #fff;
}

.copy-right .navigator-hover {
    font-size: 18rpx;
    color: #aaa;
}

.copy-right .last-txt {
    color: #fff;
    opacity: .6;
}

.overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.6);
}

.overlay .tips {
    position: absolute;
    top: 30rpx;
    right: 140rpx;
    width: 492rpx;
    height: 203rpx;
    z-index: 2;
}

.overlay.center {
    display: flex;
    justify-content: center;
}

.btn-hover {
    opacity: 0.6;
}

.overlay-inner button {
    width: 260rpx;
    background-color: transparent;
    margin-top: 60rpx;
    border: 3px solid #d9ba6a;
    border-radius: 12rpx;
    color: #d9ba6a;
    font-size: 34rpx;
}

.center-block {
    position: relative;
    margin-top: 360rpx;
    box-sizing: border-box;
    width: 568rpx;
    height: 390rpx;
    border: 3px dashed #d9ba6a;
    border-radius: 10rpx;
    color: #ffffff;
    font-size: 34rpx;
    text-align: center;
    padding-top: 232rpx;
}

.center-block .hand {
    position: absolute;
    top: 105rpx;
    left: 50%;
    width: 74rpx;
    height: 88rpx;
    margin-left: -35rpx;
}