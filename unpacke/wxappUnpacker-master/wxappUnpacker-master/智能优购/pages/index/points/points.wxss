@import "../public/bottom.wxss";

page {
}

.banner {
    width: 100%;
    height: 312rpx;
}

.header-title {
    padding: 0 15rpx;
    margin: 32rpx 0 23rpx;
    box-sizing: border-box;
}

.times .time {
    min-width: 34rpx;
    height: 34rpx;
    margin: 0 8rpx;
    line-height: 34rpx;
    text-align: center;
    background: #000;
    border-radius: 2rpx;
}

.list-img {
    width: 232rpx;
    height: 236rpx;
}

.list-content {
    padding: 0 15rpx;
    flex-wrap: wrap;
    box-sizing: border-box;
}

.list-item {
    width: 232rpx;
    height: 428rpx;
    background: #fff;
    position: relative;
}

.list-content .list-item {
    margin-right: 11rpx;
    margin-bottom: 11rpx;
}

.list-content .list-item:nth-child(3n) {
    margin-right: 0rpx;
}

.list-title {
    width: 211rpx;
    height: 52rpx;
    font-size: 22rpx;
    margin: 12rpx 10rpx;
    font-family: FZLTHJW--GB1-0;
    font-weight: 400;
    color: rgba(34,34,34,1);
    line-height: 28rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.buy-btn {
    width: 210rpx;
    height: 50rpx;
    line-height: 50rpx;
    border-radius: 10rpx;
    margin-top: 13rpx;
    background: #F11717;
}

.px20 {
    color: #E71E21;
}

.price text {
    color: #E71E21;
}

.intergl-bg {
    position: absolute;
    left: 0;
    top: 0;
    width: 70rpx;
    height: 80rpx;
    padding-bottom: 20rpx;
    background: url('https://grtimg.oss-cn-beijing.aliyuncs.com/temp/intergl_bg.png') no-repeat;
    background-size: 110% 110%;
}

.intergl-bg {
    line-height: 1;
}

.intergl-bg .px22 {
    color: rgb(173,166,24);
}