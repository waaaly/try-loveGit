page {
    background: #FE4730;
}

.banner {
    width: 100%;
    height: 312rpx;
}

.header-title {
    padding: 0 15rpx;
    margin: 32rpx 0 23rpx;
    box-sizing: border-box;
}

.times .time {
    width: 34rpx;
    height: 34rpx;
    margin: 0 8rpx;
    line-height: 34rpx;
    text-align: center;
    background: #000;
    border-radius: 2rpx;
}

.list-img {
    width: 232rpx;
    height: 236rpx;
}

.list-content {
    padding: 0 15rpx;
    flex-wrap: wrap;
    box-sizing: border-box;
}

.list-item {
    width: 232rpx;
    height: 428rpx;
    background: #fff;
}

.list-content .list-item {
    margin-right: 11rpx;
    margin-bottom: 11rpx;
}

.list-content .list-item:nth-child(3n) {
    margin-right: 0rpx;
}

.buy-btn {
    width: 210rpx;
    height: 50rpx;
    line-height: 50rpx;
    border-radius: 10rpx;
    margin-top: 13rpx;
    background: #F11717;
}

.px20 {
    color: #E71E21;
}

.price text {
    color: #E71E21;
}

.list-title-row {
    position: relative;
}

.list-title {
    width: 211rpx;
    height: 55rpx;
    font-size: 22rpx;
    margin: 12rpx 10rpx;
    font-family: FZLTHJW--GB1-0;
    font-weight: 400;
    color: rgba(34,34,34,1);
    line-height: 28rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-indent: 80rpx;
}

.list-title-tag {
    width: 70rpx;
    height: 24rpx;
    text-align: center;
    line-height: 24rpx;
    background: rgba(241,23,23,1);
    border-radius: 12rpx;
    position: absolute;
    top: 15rpx;
    left: 8rpx;
}