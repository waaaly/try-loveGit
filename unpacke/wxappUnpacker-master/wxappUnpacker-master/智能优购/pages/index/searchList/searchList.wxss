.search {
    width: 100%;
    height: 85rpx;
    padding: 7rpx 20rpx;
    box-sizing: border-box;
    background: #fff;
    position: fixed;
    z-index: 10001;
    top: 0;
    border-bottom: 2rpx solid rgba(221,221,221,1);
}

.hisyory-list {
    flex-wrap: wrap;
}

.search-icon {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    left: 35rpx;
}

.search input {
    width: 602rpx;
    height: 56rpx;
    background: rgba(243,243,243,1);
    border-radius: 28px;
    padding-left: 60rpx;
    box-sizing: border-box;
    outline: none;
}

.cancel {
    width: 92rpx;
    height: 52rpx;
    margin-left: 15rpx;
    line-height: 52rpx;
    background: rgba(241,23,23,1);
    border-radius: 10rpx;
    font-family: FZLTHJW--GB1-0;
    font-weight: 400;
    color: rgba(255,255,255,1);
}

.search-list {
    height: 100vh;
    padding: 100rpx 20rpx 0;
    box-sizing: border-box;
    background: #fff;
    overflow: scroll;
}

.list-item {
    margin-right: 14rpx;
    line-height: 1;
    padding: 12rpx 18rpx;
    border-radius: 6rpx;
    background: rgba(247,247,247,1);
    margin-top: 10rpx;
}

.search-title {
    margin: 30rpx 0;
    line-height: 1;
}

.clear {
    width: 44rpx;
    height: 21rpx;
    font-size: 22rpx;
    font-family: FZLTHJW--GB1-0;
    font-weight: 400;
    color: rgba(241,23,23,1);
}