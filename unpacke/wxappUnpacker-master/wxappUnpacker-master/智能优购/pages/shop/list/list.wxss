.filter {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 70rpx;
    background-color: white;
}

.filter view {
    float: left;
    width: 33%;
    text-align: center;
    font-size: 14px;
    height: 70rpx;
    line-height: 70rpx;
}

.filter .cur {
    color: #F4241A;
}

.container {
    padding: 90rpx 20rpx 20rpx 0rpx;
}

.item {
    float: left;
    width: 345rpx;
    margin-left: 20rpx;
    background-color: #ffffff;
    margin-bottom: 20rpx;
}

.item .img {
    width: 345rpx;
    height: 345rpx;
}

.item .title {
    font-size: 12px;
    padding: 0rpx 20rpx 0rpx 20rpx;
    height: 80rpx;
    line-height: 40rpx;
    overflow: hidden;
}

.item .cost {
    font-size: 14px;
    padding: 10rpx 20rpx 20rpx 20rpx;
    color: #F4241A;
}

.item .cost span {
    float: right;
    color: #444444;
    font-size: 12px;
    text-decoration: line-through;
}

.item .button {
    font-size: 14px;
    text-align: center;
    border-radius: 10rpx;
    height: 60rpx;
    line-height: 60rpx;
    margin: 0rpx 10rpx 10rpx 10rpx;
    background-color: #F4241A;
    color: white;
}

.prompat {
    text-align: center;
    font-size: 15px;
    padding-top: 200rpx;
}

.jd_img {
    height: 38rpx;
    float: left;
    background-color: #c81623;
    padding: 0 10rpx;
    color: #fff;
    border-radius: 10rpx;
    font: 12px/16px "Helvetica Neue","Hiragino Sans GB",SimSun,serif;
    margin-right: 10rpx;
    line-height: 38rpx;
}