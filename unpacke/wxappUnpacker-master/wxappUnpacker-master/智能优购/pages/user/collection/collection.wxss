view {
    box-sizing: border-box;
}

.item-box {
    min-height: 100vh;
    background: #f4f4f4;
    width: 100%;
    margin: 0 auto;
    padding: 0 0 40rpx;
    overflow: hidden;
}

.items {
    width: 100%;
}

.item {
    position: relative;
    margin-bottom: 10rpx;
    height: 200rpx;
    line-height: 200rpx;
    overflow: hidden;
    background: white;
}

.item:last-child {
    position: relative;
    background-color: #fff;
    margin-bottom: 10rpx;
    height: 200rpx;
    line-height: 200rpx;
    overflow: hidden;
}

.item:first-child {
    border-top: 1rpx solid #eee;
}

.item:last-child {
    margin-bottom: 0rpx;
}

.inner {
    position: absolute;
    top: 0;
}

.inner.txt {
    width: 100%;
    z-index: 4;
    transition: left 0.2s ease-in-out;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.inner.del {
    width: 120rpx;
    text-align: center;
    z-index: 5;
    right: 0;
    color: #fff;
    background: #ff3b30;
    transition: all 0.3s;
}

.inner.show {
    display: block;
}

.inner.hide {
    display: none;
}

.item text {
    line-height: 1;
}

.item-icon {
    width: 64rpx;
    height: 120rpx;
    vertical-align: middle;
    margin-right: 16rpx;
}

.shop-img {
    width: 200rpx;
    height: 200rpx;
}

.infos {
    width: 467rpx;
    height: 152rpx;
    margin-left: 45rpx;
}

.shop-t {
    font-family: FZLTHJW--GB1-0;
    font-weight: 400;
    line-height: 32rpx!important;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    white-space: normal!important;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.price {
    color: #d60200;
}

.not-in-shop {
    width: 134rpx;
    height: 88rpx;
    position: absolute;
    bottom: 33rpx;
    right: 79rpx;
    z-index: 100;
}

.goto_btn {
    width: 400rpx;
    height: 72rpx;
    margin-top: 20rpx;
    line-height: 72rpx;
    border: 2rpx solid #f11717;
    color: #f11717;
    border-radius: 36rpx;
}

.not-data {
    padding-top: 200rpx;
}

.not-data image {
    width: 180rpx;
    height: 180rpx;
}

.not-data text {
    margin: 10rpx 0 0;
}