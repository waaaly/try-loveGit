    margin-top: 20rpx;
}

.list_item_check {
    width: 36rpx;
    height: 36rpx;
}

.list_item_intror {
    width: 309rpx;
    height: 120rpx;
}

.list_item_introl {
    width: 36rpx;
    margin-right: 47rpx;
}

.del_box {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 88rpx;
    animation-fill-mode: forwards;
    background: rgba(255,255,255,1);
}

.del_box_l {
    width: 140rpx;
}

.del_box_alltxt {
    font-size: 24rpx;
    font-family: FZLTHJW--GB1-0;
    font-weight: 400;
    color: rgba(102,102,102,1);
    line-height: 40px;
}

.del_box_all {
    width: 36rpx;
    height: 36rpx;
}

.del_box_r {
    width: 50%;
    font-size: 26rpx;
    font-family: FZLTHJW--GB1-0;
    font-weight: 400;
    color: rgba(255,255,255,1);
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    background: linear-gradient(-90deg,rgba(241,23,23,1),rgba(252,67,67,1));
}

.del_box_ll {
    font-size: 26rpx;
    font-family: FZLTHJW--GB1-0;
    font-weight: 400;
    color: rgba(255,255,255,1);
    text-align: center;
    line-height: 88rpx;
    width: 50%;
    background: linear-gradient(-90deg,rgba(210,172,117,1),rgba(223,184,127,1));
}

.header_del {
    width: 100%;
    height: 65rpx;
    padding: 0 15rpx;
    position: fixed;
    top: 0;
    left: 0;
    background: #fff;
    border-top: 1rpx solid #ddd;
}

.header_del_txt {
    font-size: 26rpx;
    padding-right: 15rpx;
    font-family: FZLTHJW--GB1-0;
    font-weight: 400;
    color: rgba(34,34,34,1);
}

.header_del_img {
    width: 28rpx;
    height: 19rpx;
}

.header_del_headers {
    width: 200rpx;
    height: 100%;
    padding-left: 15rpx;
}

.showBtn {
    animation: slideup 1s;
    animation-fill-mode: forwards;
}

.hideBtn {
    animation: slidedown 1s;
    animation-fill-mode: forwards;
}

@-webkit-keyframes slidedown {
    from {
        bottom: -88rpx;
    }

    to {
        bottom: 0;
    }
}

@keyframes slidedown {
    from {
        bottom: -88rpx;
    }

    to {
        bottom: 0;
    }
}

@-webkit-keyframes slideup {
    from {
        bottom: 0rpx;
    }

    to {
        bottom: -88rpx;
    }
}

@keyframes slideup {
    from {
        bottom: 0rpx;
    }

    to {
        bottom: -88rpx;
    }
}