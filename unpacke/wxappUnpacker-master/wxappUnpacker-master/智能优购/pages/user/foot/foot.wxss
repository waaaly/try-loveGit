    color: rgba(214,2,0,1);
}

.list_item_price3 {
    font-size: 24rpx;
    font-family: MicrosoftYaHei;
    font-weight: 400;
    text-decoration: line-through;
    color: rgba(153,153,153,1);
}

.list_item_intros {
