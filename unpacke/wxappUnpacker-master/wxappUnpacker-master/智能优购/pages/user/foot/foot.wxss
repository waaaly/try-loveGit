}

.list_item_price {
    margin-top: 5rpx;
}

.list_item_price1 {
    font-size: 20rpx;
    font-family: MicrosoftYaHei;
    font-weight: 400;
    color: rgba(214,2,0,1);
}

.list_item_price2 {
    font-size: 30rpx;
    font-family: ArialMT;
