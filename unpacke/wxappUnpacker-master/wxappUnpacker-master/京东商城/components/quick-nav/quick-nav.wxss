.quick-nav__mask {
    display: none;
    position: fixed;
    z-index: 260;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0,0,0,0.3);
    opacity: 0;
    transition: opacity 0.3s;
}

.quick-nav__mask.quick-nav__mask--unfold {
    opacity: 1;
}

.quick-nav__mask.quick-nav__mask--show {
    display: block;
}

.quick-nav__main {
    position: fixed;
    z-index: 261;
    right: 0;
    bottom: 100px;
    transform: translateX(240px);
    transition: transform 0.3s;
    transition: transform 0.3s,-webkit-transform 0.3s;
}

.quick-nav__main.quick-nav__main--unfold {
    transform: translateX(0);
}

.quick-nav__ctrl {
    position: absolute;
    left: -45px;
    top: 50%;
    margin-top: -22px;
    box-sizing: border-box;
    padding-left: 20px;
    width: 45px;
    height: 45px;
    font-size: 10px;
    color: #fff;
    background: rgba(0,0,0,0.7) url('https://img11.360buyimg.com/jdphoto/s20x20_jfs/t21340/296/1228974280/367/219171b4/5b237d04N361368de.png') no-repeat left 5px center;
    background-size: 10px;
    border-radius: 4px 0 0 4px;
}

.quick-nav__ctrl.quick-nav__ctrl--unfold {
    background-image: url('https://img11.360buyimg.com/jdphoto/s20x20_jfs/t23338/199/43341257/369/c7468ab0/5b237d34N9f118d98.png');
}

.quick-nav__ctrl-text {
    position: absolute;
    left: 20px;
    top: 50%;
    width: 2em;
    transform: translateY(-50%);
}

.quick-nav__list {
    width: 240px;
    height: 120px;
    overflow: hidden;
    border-radius: 4px 0 0 4px;
    background-color: #fff;
}

.quick-nav__list-item {
    float: left;
    width: 60px;
    height: 60px;
    text-align: center;
    font-size: 12px;
}

.quick-nav__list-item-img {
    display: block;
    margin: 10px auto 4px;
    width: 20px;
    height: 20px;
}

.quick-nav__list-item-text {
    font-size: 12px;
    color: #999;
}