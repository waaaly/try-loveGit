.share {
    display: block;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 904;
    opacity: 1;
    transition: opacity 0.4s linear;
    background: rgba(0,0,0,0.9);
}

.share__main {
    position: absolute;
    left: 50%;
    top: 40%;
    width: 600rpx;
    height: 800rpx;
    transform: translate(-50%,-50%);
}

.share__main-img {
    width: 100%;
    height: 100%;
}

.share__main-img img {
    height: auto!important;
}

.share__main-close {
    position: absolute;
    left: 50%;
    transform: translate(-50%,0);
    bottom: 100rpx;
    width: 70rpx;
    height: 70rpx;
    z-index: 2;
    background: url("data:image/png;base64,");
    background-size: 70rpx;
}

.share__main-text {
    text-align: center;
    color: #fff;
    font-size: 40rpx;
}

.share-box_btn {
    color: #fff!important;
    background: #F6574D!important;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 36rpx;
    letter-spacing: 1rpx;
    border: none;
}

.share-box_btn::after {
    border: 0;
}