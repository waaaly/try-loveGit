@import "../../app.wxss";

.share-layer__mask {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0,0,0,.5);
    z-index: 330;
}

.share-layer__main {
    display: felx;
    flex-direction: column;
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    background: #fff;
    transform: translate3d(0,100%,0);
    transition: all .5s cubic-bezier(0.175,0.885,0.32,1.0);
    z-index: 331;
}

.share-layer__main.shop {
    transform: translate3d(0,100%,0);
}

.share-layer__main.show {
    transform: translate3d(0,0,0);
}

.share-layer__header {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 10px;
    height: 46px;
    font-size: 16px;
    background: #F7F7F7;
}

.share-layer__header-l {
    flex: 1;
}

.share-layer__header-r {
    width: 20px;
    height: 100%;
}

.share-layer__header .icon-close {
    position: relative;
    width: 20px;
    height: 100%;
}

.share-layer__header .icon-close::before,.share-layer__header .icon-close::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -9px;
    display: inline-block;
    width: 18px;
    height: 1px;
    background: rgba(0,0,0,.2);
    transform: rotate(-45deg);
}

.share-layer__header .icon-close::after {
    transform: rotate(45deg);
}

.share-layer__content {
    flex: 1;
    padding-bottom: constant(safe-area-inset-bottom);
    padding-bottom: env(safe-area-inset-bottom);
}

.share-layer__options {
    display: flex;
    align-items: center;
    justify-content: center;
}

.share-layer__options-item {
    position: relative;
    margin: 38px 0;
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 70px;
}

.share-layer__options-item:first-child::after {
    content: '';
    display: inline-block;
    position: absolute;
    right: 0;
    top: 50%;
    margin-top: -25px;
    width: 1rpx;
    height: 50px;
    background: #E5E5E5;
}

.share-layer__options .share-button {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    color: transparent;
    line-height: initial;
    border: none;
    border-radius: 0;
    outline: none;
    background-color: transparent;
}

.share-layer__options .icon-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border: 1rpx solid #E5E5E5;
    border-radius: 50%;
}

.share-layer__options .icon-wechat {
    width: 27px;
    height: 22px;
}

.share-layer__options .icon-timeline {
    width: 25px;
    height: 25px;
}

.share-layer__options .item-name {
    margin-top: 7px;
    color: #666;
    font-size: 14px;
}

.share-layer__detail {
    display: flex;
    flex-direction: column;
    position: relative;
    height: 100%;
}

.share-layer__preview {
    margin-top: 30rpx;
}

.share-layer__preview .image-wrapper {
    position: relative;
    width: 375rpx;
    height: 667rpx;
    margin: 0 auto;
    background: #fff;
    box-shadow: 0 10rpx 25rpx 0 rgba(0,0,0,0.08);
    overflow: hidden;
    opacity: 0;
}

.share-layer__preview .image-wrapper.show {
    opacity: 1;
}

.share-layer__preview .preview-img {
    width: 375rpx;
    height: 667rpx;
}

.share-layer__preview .preview-canvas {
    position: absolute;
    top: 0;
    left: 0;
    transform: translate3d(-200%,0,0);
    width: 750px;
    height: 1334px;
    opacity: 0;
}

.share-layer__btn-save {
    margin: 30rpx 20rpx 34rpx;
    height: 92rpx;
    color: #fff;
    font-size: 32rpx;
    line-height: 92rpx;
    text-align: center;
    background: #E93B3D;
    border-radius: 4px;
}

.share-layer__tips {
    margin-bottom: 34rpx;
    width: 100%;
    color: #666;
    font-size: 24rpx;
    line-height: 1.5;
    text-align: center;
}