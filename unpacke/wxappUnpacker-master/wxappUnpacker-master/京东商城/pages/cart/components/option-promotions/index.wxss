.promo {
    font-size: 24rpx;
    z-index: 90;
}

.promo_tips {
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    position: fixed;
    z-index: 90;
    bottom: 120rpx;
    margin-bottom: constant(safe-area-inset-bottom);
    margin-bottom: env(safe-area-inset-bottom);
    left: 20rpx;
    right: 20rpx;
    max-width: 1040rpx;
    height: 64rpx;
    font-weight: 400;
    color: #fff;
    background-color: #f46669;
    box-shadow: 0 0 20rpx 0 rgba(0,0,0,.2);
    border-radius: 64rpx;
    animation: promo_tips_animation .5s linear;
}

.promo_tips_close {
    width: 70rpx;
    height: 64rpx;
    background: url(https://img11.360buyimg.com/jdphoto/s30x30_jfs/t1/28785/3/1990/220/5c188153Ead9dfcbf/cb3eb0e669feff1d.png) no-repeat 50%;
    background-size: 30rpx;
}

.promo_tips_text {
    flex: 1;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.promo_tips_text_yen {
    font-size: 30rpx;
}

.promo_tips_text_num {
    font-weight: 700;
    font-size: 30rpx;
    white-space: nowrap;
}

.promo_tips_link {
    position: relative;
    width: 170rpx;
    height: 64rpx;
    line-height: 64rpx;
    text-align: center;
}

.promo_tips_link::before {
    content: "";
    position: absolute;
    z-index: 1;
    pointer-events: none;
    background-color: hsla(0,0%,100%,.5);
    width: 2rpx;
    top: 0;
    bottom: 0;
    left: 0;
    top: 20rpx;
    bottom: 20rpx;
}

.promo_AIchoose .mask {
    position: fixed;
    top: 100%;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 90;
    background-color: rgba(0,0,0,.7);
}

.promo_AIchoose_main {
    position: fixed;
    transform: translate3d(0,840rpx,0);
    transition: transform .2s cubic-bezier(0,0,.25,1);
    transition: transform .2s cubic-bezier(0,0,.25,1),-webkit-transform .2s cubic-bezier(0,0,.25,1);
    bottom: 0;
    width: 100%;
    z-index: 91;
    display: flex;
    flex-direction: column;
    background-color: #fff;
    padding-bottom: 0rpx;
    padding-bottom: constant(safe-area-inset-bottom);
    padding-bottom: env(safe-area-inset-bottom);
}

.promo_AIchoose_header {
    position: relative;
    height: 80rpx;
    line-height: 80rpx;
    padding-left: 20rpx;
    color: #333;
    background-color: #f3f2f8;
}

.promo_AIchoose_header::after {
    -webkit-transform: scaleY(.5);
    -webkit-transform-origin: 50% 100%;
}

.promo_AIchoose_close {
    position: absolute;
    top: 0;
    right: 0;
    width: 80rpx;
    height: 80rpx;
    z-index: 1;
}

.promo_AIchoose_close::after {
    content: "";
    position: absolute;
    top: 20rpx;
    right: 10px;
    width: 34rpx;
    height: 34rpx;
    background: url(data:image/png;base64,) no-repeat 2rpx 2rpx;
    background-size: 30rpx;
}

.promo_AIchoose_body {
    height: 600rpx;
}

.promo_AIchoose_body .top {
    height: 1rpx;
}

.promo_AIchoose_title {
    margin-top: 30rpx;
    padding: 0 20rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: #333;
}

.promo_AIchoose_goods {
    overflow: hidden;
    padding: 0 20rpx;
}

.promo_AIchoose_good {
    position: relative;
    float: left;
    margin: 20rpx 20rpx 0 0;
    overflow: hidden;
}

.promo_AIchoose_good image {
    width: 150rpx;
    height: 150rpx;
}

.promo_AIchoose_btn {
    height: 98rpx;
    line-height: 98rpx;
    text-align: center;
    font-size: 32rpx;
    font-weight: 700;
    color: #fff;
    background-color: #e4393c;
}

.promo_AIchoose .mod_sign_tip {
    display: inline-block;
    background: #e4393c;
    position: relative;
    color: #fff;
    border-radius: 4rpx;
    min-width: 32rpx;
    font-size: 20rpx;
    line-height: 30rpx;
    vertical-align: middle;
    margin-top: -4rpx;
    margin-right: 10rpx;
    text-align: center;
}

.promo_AIchoose .mod_sign_tip text {
    background: #fff;
}

.promo_AIchoose .mod_sign_tip.bor {
    color: #e4393c;
    background: #fff;
}

.promo_AIchoose .mod_sign_tip.bor::after {
    content: "";
    display: block;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    pointer-events: none;
    border-radius: 4rpx;
    border: 2rpx solid #e4393c;
}

.promo_AIchoose .mod_sign_tip.bor text {
    padding: 0 6rpx;
    display: inline-block;
}

.promo_AIchoose.show .promo_AIchoose_main {
    transform: translate3d(0,0,0);
    z-index: 91;
}

.promo_AIchoose.show .mask {
    top: 0;
    overflow: hidden;
    pointer-events: auto;
}

@-webkit-keyframes promo_tips_animation {
    0% {
        width: 0;
    }

    50% {
        width: 50%;
    }

    75% {
        width: 75%;
    }

    100% {
        width: 100%;
    }
}

@keyframes promo_tips_animation {
    0% {
        width: 0;
    }

    50% {
        width: 50%;
    }

    75% {
        width: 75%;
    }

    100% {
        width: 100%;
    }
}