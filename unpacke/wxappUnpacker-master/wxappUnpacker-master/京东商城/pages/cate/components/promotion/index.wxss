.marketing__header {
    font-size: 14px;
    font-weight: 700;
    margin: 15px 0 5px;
}

.marketing__list {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    flex-wrap: wrap;
    overflow: hidden;
    margin: 10px 10px 10px 0;
}

.marketing__list-item {
    width: 50%;
    height: 60px;
    background-color: #f8f8f8;
    position: relative;
    box-sizing: border-box;
    padding: 10px 50px 10px 10px;
    margin-bottom: 1px;
}

.marketing__list-item:nth-child(2n) {
    margin: 0 -1px 1px 1px;
}

.marketing__list-item-title {
    font-size: 14px;
    color: #333;
    font-weight: 700;
}

.marketing__list-item-des {
    font-size: 12px;
    color: #e93b3d;
}

.marketing__list-item-des,.marketing__list-item-title {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.marketing__list-item-image {
    width: 50px;
    height: 50px;
    position: absolute;
    top: 5px;
    right: 0;
}