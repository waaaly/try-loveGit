.banner {
    position: relative;
    overflow: hidden;
    margin: 10px 10px 20px 0;
    padding-top: 34%;
}

.banner__swiper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.banner__swiper-item-image {
    display: block;
    width: 100%;
    height: 100%;
}

.banner__dots {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 5px;
    height: 4px;
    text-align: center;
    font-size: 0;
}

.banner__dot {
    display: inline-block;
    margin: 0 2px;
    width: 4px;
    height: 4px;
    border-radius: 4px;
    background: rgba(0,0,0,.2);
    transition: all .2s;
}

.banner__dot--cur {
    width: 8px;
    background: rgba(233,59,61,.5);
}