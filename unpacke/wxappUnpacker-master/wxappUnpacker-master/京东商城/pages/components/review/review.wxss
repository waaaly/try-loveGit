@import "../../../__wuBaseWxss__/6.wxss";

.review_item {
    padding: 10px 10px 10px 0;
}

.review_item .user {
    font-size: 12px;
}

.review_item .user .level {
    color: #999;
}

.review_item .star {
    display: inline-block;
    vertical-align: middle;
    margin-top: -2px;
    margin-left: 5px;
    width: 60px;
    height: 12px;
    background: url('https://img11.360buyimg.com/jdphoto/s24x24_jfs/t21514/275/1208980515/303/eec71b0b/5b232cffN1d867d01.png') repeat-x;
    background-size: 12px;
}

.review_item .star .num {
    height: 12px;
    background: url('https://img11.360buyimg.com/jdphoto/s24x24_jfs/t22807/156/25261736/303/6a8885fb/5b232cffN0d3a2f44.png') repeat-x;
    background-size: 12px;
}

.review_item .content {
    margin: 10px 0;
}

.review_item .content .images {
    font-size: 0;
}

.review_item .content .image {
    position: relative;
    display: inline-block;
    margin-top: 5px;
    margin-right: 5px;
    width: 160rpx;
    height: 160rpx;
}

.review_item .content image {
    width: 100%;
    height: 100%;
}

.review_item .content .mask {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    text-align: center;
    line-height: 160rpx;
    font-size: 14px;
    color: #fff;
    background: rgba(0,0,0,.5);
}

.review_item .time {
    font-size: 12px;
    color: #999;
}

@import "../../../app.wxss";

.review {
    margin-top: 15px;
    overflow: hidden;
}

.review .header .flex_c {
    font-size: 12px;
    text-align: right;
}

.review .header .flex_c .n {
    padding-right: 1px;
    color: #E93B3D;
}

.review_default {
    position: relative;
    background: #f7f7f7;
    font-size: 12px;
    height: 40px;
    line-height: 40px;
    text-align: center;
    color: #999;
    margin: 0 10px 10px;
}

.review .header {
    justify-content: space-between;
}

.review .total {
    position: relative;
    margin: 10px auto;
    font-size: 12px;
    color: #333;
    text-align: center;
    width: 92px;
    height: 25px;
    line-height: 25px;
    border: 1rpx solid #CCC;
    border-radius: 100px;
}

.review .tips {
    color: #999;
}

.review_time {
    float: right;
    font-size: 12px;
    color: #999;
}

.review_image {
    overflow-x: auto;
    white-space: nowrap;
    -webkit-overflow-scrolling: touch;
}

.review_entries {
    padding: 0 10px;
    margin-bottom: 15px;
    overflow: hidden;
}

.review_entries_item {
    float: left;
    font-size: 10px;
    border-radius: 2px;
    text-align: center;
    height: 25px;
    line-height: 25px;
    margin-right: 10px;
    background: #FDF0F0;
    color: #666;
    padding: 0 10px;
    margin-top: 15px;
}

.review_entries_item.cur {
    color: #FFF;
    background: #E93B3D;
}

.review_detail text {
    font-size: 12px;
    color: #FC1C32;
    margin-left: 3px;
}