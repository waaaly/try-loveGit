@import "../../../app.wxss";

.modal_mask {
    position: fixed;
    z-index: 1000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0,0,0,.6);
}

.modal_icon {
    display: block;
    width: 50px;
    height: 50px;
    margin: 24px auto 0;
}

.modal_icon image {
    width: 100%;
    height: 100%;
}

.modal_content {
    position: fixed;
    z-index: 5000;
    width: 80%;
    max-width: 300px;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    background-color: #fff;
    text-align: center;
    border-radius: 6px;
    overflow: hidden;
}

.modal_content_close {
    position: absolute;
    top: 0;
    right: 0;
    z-index: 2;
    padding: 10px;
}

.modal_content_close image {
    width: 10px;
    height: 10px;
}

.modal_hd {
    padding: 1.3em 1.6em .5em;
}

.modal_title {
    font-weight: 400;
    font-size: 18px;
}

.modal_bd {
    padding: 0 1.6em .8em;
    max-height: 360px;
    font-size: 15px;
    line-height: 1.3;
    word-wrap: break-word;
    word-break: break-all;
    color: #999999;
    -webkit-overflow-scrolling: touch;
    overflow: hidden;
    overflow-y: auto;
    text-align: left;
}

.modal_bd:first-child {
    padding: 2.7em 20px 1.7em;
    color: #353535;
}

.modal_bd.left {
    text-align: left;
}

.modal_bd.right {
    text-align: right;
}

.modal_bd .line {
    display: block;
    margin-bottom: 4px;
}

.modal_tip {
    margin-top: 5px;
}

.modal_ft {
    position: relative;
    line-height: 48px;
    font-size: 18px;
    display: flex;
}

.modal_ft:after {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 1px;
    border-top: 1px solid #d5d5d6;
    color: #E93B3D;
    transform-origin: 0 0;
    transform: scaleY(0.5);
}

.modal_btn {
    display: block;
    flex: 1;
    color: #3cc51f;
    text-decoration: none;
    -webkit-tap-highlight-color: rgba(0,0,0,0);
    position: relative;
}

.modal_btn:active {
    background-color: #eee;
}

.modal_btn:after {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    width: 1px;
    bottom: 0;
    border-left: 1px solid #d5d5d6;
    color: #d5d5d6;
    transform-origin: 0 0;
    transform: scaleX(0.5);
}

.modal_btn:first-child:after {
    display: none;
}

.modal_btn.default {
    color: #353535;
}

.modal_btn.primary {
    color: #E93B3D;
}