.sku_panel__header_tag {
    display: inline-block;
    position: relative;
    height: 28rpx;
    line-height: normal;
    color: #e93b3d;
    font-size: 20rpx;
    padding-right: 5px;
    top: -4rpx;
}

.sku_panel__header_tag.down {
    top: 1px;
}

.sku_panel__header_tag::before {
    content: "";
    display: inline-block;
    vertical-align: middle;
    margin: 2px 4px 0 0;
    width: 28rpx;
    height: 28rpx;
    background: url(//img11.360buyimg.com/jdphoto/s27x28_jfs/t8428/213/2336676212/874/8c124024/59cb581eNa61a09f7.png) no-repeat;
    background-size: 100%;
    position: relative;
    top: -3rpx;
}

.sku_panel__header_tag::after {
    content: "";
    position: absolute;
    z-index: 1;
    pointer-events: none;
    background-color: #fff;
    border: 1px solid #e93b3d;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background: none;
    border-radius: 2px;
}

@media only screen and (-webkit-min-device-pixel-ratio:2) {
    .sku_panel__header_tag::after {
        right: -100%;
        bottom: -100%;
        -webkit-transform: scale(.5);
        -webkit-transform-origin: 0 0;
        border-radius: 4px;
    }
}

.tuan_good_price_tag {
    color: #fff;
    margin-right: 10px;
    font-size: 28rpx;
    height: 40rpx;
}

.tuan_good_price_tag::before {
    background: url(//img11.360buyimg.com/jdphoto/s36x36_jfs/t9196/219/2267173267/360/72b9c6f8/59ca0ddcN8b47729a.png) no-repeat;
    background-size: 100%;
    width: 40rpx;
    height: 40rpx;
    top: -3rpx;
}

.tuan_good_price_tag::after {
    background-color: #fff;
    border: 1px solid #ddd;
    border-color: #fff;
    background: none;
}

.hot_goods {
