    .bind-container .content .input image.verifypic::before {
        -webkit-transform: scaleX(0.5);
        -webkit-transform-origin: 0% 50%;
    }
}

.bind-container .content .input .sendcode {
    position: absolute;
    top: 28rpx;
    right: 20rpx;
    width: 176rpx;
    text-align: center;
}

.bind-container .content .input .sendcode::before {
    content: '';
    position: absolute;
    z-index: 1;
    pointer-events: none;
    background-color: #e5e5e5;
    width: 1px;
    top: 0;
    bottom: 0;
    left: 0;
    left: -12rpx;
}

@media only screen and (-webkit-min-device-pixel-ratio:2) {
    .bind-container .content .input .sendcode::before {
        -webkit-transform: scaleX(0.5);
        -webkit-transform-origin: 0% 50%;
    }
}

.bind-container .content .input .sendcode .send {
    display: block;
    font-size: 14px;
    line-height: 21px;
    text-align: center;
    color: #E93B3D;
}

.bind-container .content .input .sendcode .send.sended {
    opacity: 0.3;
}

.bind-container .content .input.error {
    background: #FDF0F0;
}

.bind-container .content .input.error input {
    background: #FDF0F0;
    color: #E93B3D;
}

.bind-container .content .input.error+.errmsg {
    margin: 7px 0;
    font-size: 12px;
    color: #E93B3D;
}

.errmsg {
    margin: 7px 0;
    font-size: 12px;
    color: #E93B3D;
}

.bind-container .content .input .delete-icon {
    position: absolute;
    right: 24rpx;
    top: 34rpx;
}

.bind-container .content .input .see-icon {
    position: absolute;
    right: 24rpx;
    top: 38rpx;
}

.bind-container .content .input .hide-icon {
    position: absolute;
    right: 24rpx;
    top: 38rpx;
}

.bind-container .content .tip {
    font-size: 12px;
    line-height: 18px;
    margin-top: 14px;
    color: #999999;
}

.bind-container .content .tip .left {
    float: left;
}

.bind-container .content .tip .right {
    float: right;
}

.bind-container .btns {
    position: relative;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    margin: 40rpx -30rpx -30rpx;
}

.bind-container .btns:last-child {
    margin: 40rpx -30rpx -30rpx;
}

.bind-container .btns:last-child::after {
    display: none;
}

.bind-container .btns::after {
    content: '';
    position: absolute;
    z-index: 1;
    pointer-events: none;
    background-color: #e5e5e5;
    height: 1px;
    left: 0;
    right: 0;
    bottom: 0;
}

@media only screen and (-webkit-min-device-pixel-ratio:2) {
    .bind-container .btns::after {
        -webkit-transform: scaleY(0.5);
        -webkit-transform-origin: 50% 100%;
    }
}

.bind-container .btns .btn {
    -webkit-box-flex: 1;
    flex: 1;
    text-align: center;
}

.bind-container .btns .btn::after {
    border: none;
}

.bind-container .btns .btn+.btn::after {
    content: '';
    position: absolute;
    z-index: 1;
    pointer-events: none;
    background-color: #e5e5e5;
    width: 1px;
    top: 0;
    bottom: 0;
    left: 0;
}

@media only screen and (-webkit-min-device-pixel-ratio:2) {
    .bind-container .btns .btn+.btn::after {
        -webkit-transform: scaleX(0.5);
        -webkit-transform-origin: 0% 50%;
    }
}

.bind-container .btn {
    position: relative;
    width: 100px;
    height: 44px;
    line-height: 44px;
    background: #fff;
    color: #333;
    font-size: 14px;
}

.bind-container .btn::before {
    content: '';
    position: absolute;
    z-index: 1;
    pointer-events: none;
