}

.bind-container.fixed {
    position: fixed;
    margin: auto;
    top: 50%;
    left: 50%;
    z-index: 200;
    transform: translate(-50%,-50%);
}

.bind-container .login {
    margin: 50px auto;
    width: 50px;
    height: 50px;
    background: url("https://img11.360buyimg.com/jdphoto/s46x34_jfs/t22000/336/1257830138/440/67d21ca1/5b2362aaNc9ed0124.png") 15px 15px no-repeat;
    background-size: 25px 25px;
    text-align: center;
    font-size: 16px;
    line-height: 24px;
}

.bind-container .login .login-icon {
    width: 100%;
    height: 100%;
    border: 3px solid #f7f7f7;
    border-color: #f7f7f7 #f7f7f7 #E93B3D #E93B3D;
    border-radius: 50px;
    animation: loading 0.7s infinite linear;
}

@-webkit-keyframes loading {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }
}

@keyframes loading {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }
}

.bind-container .login-text {
    margin-top: 10px;
}

