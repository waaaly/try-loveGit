.bind-container {
    margin: 10px auto;
    padding: 0 30rpx 30rpx;
    position: relative;
    overflow: hidden;
    width: 550rpx;
    background-color: #ffffff;
    color: #333333;
    border-radius: 6px;
    box-shadow: 0 1px 10px 0px rgba(0,0,0,0.3);
    z-index: 999;
}

.bind-container .header {
    text-align: center;
    height: 92rpx;
    font-size: 32rpx;
    line-height: 92rpx;
    margin: 0 -30rpx;
    border-bottom: 1px solid #e5e5e5;
}

.bind-container .close {
    padding: 12px;
    position: absolute;
    top: 0;
    right: 0;
    z-index: 2;
}

.bind-container .close::after {
    content: '';
    display: block;
    width: 20px;
    height: 20px;
    background: url('https://img11.360buyimg.com/jdphoto/s22x22_jfs/t21439/33/1245720891/259/9af44593/5b236227Nc618eb3d.png') center no-repeat;
    background-size: 11px auto;
}

.bind-container .content {
    width: 480rpx;
    margin: auto;
    padding-top: 5px;
}

.bind-container .content .info {
    font-size: 28rpx;
    text-align: center;
    margin: 20rpx auto;
}

.bind-container .content .info.tl {
    text-align: left;
}

.bind-container .content .info.tl.title {
    color: #999999;
    margin-bottom: 0rpx;
}

.bind-container .content .info.tl.user-info {
    margin: 0rpx 0rpx 0rpx 0rpx;
    padding: 0rpx 0rpx 20rpx 0rpx;
    border-bottom: 1px solid #e5e5e5;
}

.bind-container .content .temp-icon {
    display: inline-block;
    background: url('https://img11.360buyimg.com/jdphoto/s128x28_jfs/t22243/280/1261909170/847/5b457a31/5b23624eNea97d36d.png');
    width: 64px;
    height: 14px;
    background-size: 64px 14px;
}

.bind-container .content .info.import {
    color: #E93B3D;
    background-color: #fff;
    line-height: normal;
    padding-left: 0;
    padding-right: 0;
}

.bind-container .content .info.import:after {
    border: none;
}

.bind-container .content .info .import {
    color: #E93B3D;
}

.bind-container .content .info.light {
    color: #999999;
}

.bind-container .content .info.lighter {
    color: #A5A5A5;
}

.bind-container .content .info.bigger {
    font-size: 16px;
    line-height: 24px;
}

.bind-container .content .info.small {
    font-size: 12px;
    line-height: 18px;
}

.bind-container .content .info .arrow {
    content: '';
    display: block;
    width: 8px;
    height: 8px;
    border-top: 1px solid #E93B3D;
    border-left: 1px solid #E93B3D;
    transform-origin: 50%;
    transform: rotate(135deg);
    display: inline-block;
}

.bind-container .content .user-info-container {
    background: #f7f7f7;
    height: 120rpx;
    margin: 20rpx auto;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}

.bind-container .content .user-info-container .head-pic {
    margin: auto;
    width: 40px;
    height: 40px;
    display: inline-block;
}

.bind-container .content .user-info-container .head-pic image {
    width: 100%;
    height: 100%;
    border: none;
}

.bind-container .content .user-info-container .user-info {
    font-size: 24rpx;
    margin: auto;
    width: 308rpx;
}

.bind-container .content .user-info-container .user-info .tip {
    margin-top: 8rpx;
}

.bind-container .content .user-info-container .user-info .temp-icon {
    display: inline-block;
    background: url("https://img11.360buyimg.com/jdphoto/s128x28_jfs/t22243/280/1261909170/847/5b457a31/5b23624eNea97d36d.png");
    width: 64px;
    height: 14px;
    background-size: 64px 14px;
}

.bind-container .content .input {
    background: #f7f7f7;
    height: 88rpx;
    margin: 4rpx 0;
    position: relative;
}

.bind-container .content .input:first-child {
    margin-top: 30rpx;
}

.bind-container .content .input input {
    font-size: 28rpx;
    padding: 0 20rpx;
    width: 400rpx;
    height: 100%;
    border: none;
    background: #f7f7f7;
    color: #333333;
}

.bind-container .content .input input::-webkit-input-placeholder {
    color: #cccccc;
}

.bind-container .content .input input::-moz-placeholder {
    color: #cccccc;
}

.bind-container .content .input input:-ms-input-placeholder {
