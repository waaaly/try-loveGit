.column {
    background-color: #fff;
    padding: 0 30rpx 30rpx;
    display: flex;
}

.column__item {
    border: 1rpx solid #f1dfc3;
    width: 156rpx;
    height: 284rpx;
    margin-right: 20rpx;
    border-radius: 4rpx;
    background-color: #fff;
}

.column__item-kanjia {
    width: auto;
    flex: 1;
    min-width: 0;
}

.column__item-kanjia .column__title {
    background-image: url('https://img11.360buyimg.com/jdphoto/s333x68_jfs/t25666/280/2408170457/3909/a6bdf9c6/5be554b0Na2092115.png');
    background-size: 333rpx 68rpx;
}

.column__item-lihe .column__title {
    background-image: url('https://img11.360buyimg.com/jdphoto/s156x68_jfs/t29683/144/13065898/2179/c9f459dc/5be554b1N9adcd7e1.png');
    background-size: 156rpx 68rpx;
}

.column__item-pintuan {
    margin-right: 0;
}

.column__item-pintuan .column__title {
    background-image: url('https://img11.360buyimg.com/jdphoto/s156x68_jfs/t30079/59/12618590/2555/c757bea2/5be554b0Nadb0eb0c.png');
    background-size: 156rpx 68rpx;
}

.column__title {
    height: 68rpx;
    background-position: center top;
    background-repeat: no-repeat;
}

.column__images {
    display: flex;
    width: 100%;
    padding: 0 20rpx;
    box-sizing: border-box;
    justify-content: space-between;
}

.column__images .column__image {
    margin: 0;
}

.column__image {
    display: block;
    width: 138rpx;
    height: 138rpx;
    margin: 0 auto;
    border-radius: 4rpx;
}

.column-swiper {
    margin: 0 auto;
    border-radius: 4rpx;
    overflow: hidden;
    position: relative;
}

.column-swiper::after {
    content: '';
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
}

.column-swiper,.column-swiper__item,.column-swiper__image {
    display: block;
    width: 138rpx;
    height: 138rpx;
}

.column__text {
    font-size: 24rpx;
    color: #333;
    padding: 24rpx 15rpx 0 20rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.column__text image {
    display: inline-block;
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
    border-radius: 40rpx;
    margin: -2rpx 0 0 0;
    border: 2rpx solid #fff;
}

.column__text image+image {
    margin-left: -25rpx;
}

.column-swiperText {
    height: 44rpx;
    margin: 20rpx 15rpx 0;
    position: relative;
}

.column-swiperText::after {
    content: '';
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
}

.column-swiperText__item {
    height: 44rpx;
    line-height: 44rpx;
    font-size: 24rpx;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.column-swiperText__item image {
    display: inline-block;
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
    border-radius: 40rpx;
    margin: -2rpx 0 0 0;
    border: 2rpx solid #fff;
}

.column-swiperText__item text {
    color: #BE8E40;
}