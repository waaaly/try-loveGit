.group__item-wear {
    width: 50%;
    height: 430rpx;
}

.group-image-wear {
    height: 280rpx;
    position: absolute;
    bottom: 30rpx;
    left: 30rpx;
    right: 30rpx;
}

.group-image-wear__cover {
    position: absolute;
    width: 86rpx;
    height: 86rpx;
}

.group-image-wear__cover:nth-child(1) {
    left: 0;
    top: 0;
    width: 210rpx;
    height: 280rpx;
}

.group-image-wear__cover:nth-child(2) {
    right: 0;
    top: 0;
}

.group-image-wear__cover:nth-child(3) {
    right: 0;
    top: 97rpx;
}

.group-image-wear__cover:nth-child(4) {
    right: 0;
    top: 194rpx;
}

.group__column {
    display: flex;
    width: 50%;
    flex-direction: column;
}

.group__column .group__item {
    width: 100%;
}