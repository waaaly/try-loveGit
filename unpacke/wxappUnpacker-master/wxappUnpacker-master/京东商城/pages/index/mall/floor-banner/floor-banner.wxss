.floor-banner {
    position: relative;
    width: 690rpx;
    height: 192rpx;
    margin: 15rpx auto;
    border-radius: 4rpx;
    overflow: hidden;
    z-index: 1;
}

.floor-banner-swiper,.floor-banner-swiper__image {
    width: 100%;
    height: 100%;
}

.floor-banner-dot {
    position: absolute;
    left: 0;
    bottom: 20rpx;
    right: 0;
    height: 10rpx;
    text-align: center;
    font-size: 0;
}

.floor-banner-dot__item {
    display: inline-block;
    margin: 0 6rpx;
    width: 10rpx;
    height: 10rpx;
    border-radius: 6rpx;
    background: rgba(255,255,255,0.4);
    transition: all .2s;
}

.floor-banner-dot__item--cur {
    width: 20rpx;
    background: #fff;
}