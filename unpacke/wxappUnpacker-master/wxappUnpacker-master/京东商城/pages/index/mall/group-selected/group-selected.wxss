@import "../group-quality/group-quality.wxss";

.group__item-m {
    height: 270rpx;
}

.group__item-m .group-title {
    display: flex;
    align-items: baseline;
}

.group__item-m .group-title__dt {
    margin-right: 10rpx;
}

.list {
    display: flex;
    flex-wrap: wrap;
    padding: 30rpx 0 10rpx 30rpx;
}

.list__item {
    width: 158rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 28rpx;
    color: #666;
    text-align: center;
    border-radius: 60rpx;
    background-color: #f7f7f7;
    margin: 0 20rpx 20rpx 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}