page {
    background-color: #f7f7f7;
}

.header {
    background-color: #fff;
    overflow: hidden;
}

.floor {
    background-color: #fff;
    margin: 30rpx 0;
    overflow: hidden;
}

.back2top {
    position: fixed;
    display: block;
    right: 0;
    bottom: 45px;
    width: 45px;
    height: 45px;
    background-color: rgba(0,0,0,.7);
    border-radius: 4px 0 0 4px;
    z-index: 100;
}

.back2top::after {
    content: "";
    display: block;
    width: 100%;
    height: 100%;
    background-image: url("https://img11.360buyimg.com/jdphoto/s32x40_jfs/t20209/208/1238633494/295/ff8196a8/5b235d84N5edafe72.png");
    background-position: center;
    background-repeat: no-repeat;
    background-size: 16px 20px;
}

.sale-official {
    overflow: hidden;
    max-height: 917rpx;
    background-repeat: no-repeat;
    background-position: center top;
    background-size: 750rpx 917rpx;
}