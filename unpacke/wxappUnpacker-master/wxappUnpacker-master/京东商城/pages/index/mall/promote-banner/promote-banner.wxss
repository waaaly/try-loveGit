.promote-banner {
    z-index: 0;
    position: relative;
    width: 750rpx;
    height: 180rpx;
    display: flex;
}

.promote-banner__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    opacity: 0;
    transition: opacity 0.2s linear;
}

.promote-banner__image--show {
    opacity: 1;
}

.promote-banner__item {
    flex: 1;
    min-width: 0;
    height: 180rpx;
}