.vam {
    vertical-align: middle;
}

.xcoupon {
    position: relative;
    display: block;
}

.xcoupon_main {
    display: flex;
    align-items: center;
    height: 80px;
    border: 1rpx solid;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    border-bottom: 0;
    background: #fff;
}

.xcoupon_price {
    display: block;
    width: 80px;
    padding: 0 10px;
    font-size: 12px;
}

.xcoupon_price text {
    margin-left: 5px;
    font-size: 30px;
}

.xcoupon_price .text_normal {
    font-size: 20px;
}

.xcoupon_price .text_big {
    font-size: 30px;
}

.xcoupon_msg {
    flex: 1;
    overflow: hidden;
    padding-right: 10px;
}

.xcoupon_condition {
    display: block;
    line-height: 1;
}

.xcoupon_condition_discount {
    line-height: 1.2;
    font-size: 12px;
}

.xcoupon_condition_detail {
    font-size: 14px;
    display: inline;
}

.xcoupon_tag {
    display: inline-block;
    position: relative;
    margin: 0 5px 0 8px;
    padding: 0 4px 0 5px;
    vertical-align: middle;
    border-top-right-radius: 2px;
    border-bottom-right-radius: 2px;
    font-size: 10px;
    line-height: 1.4;
}

.xcoupon_tag:before {
    content: '';
    position: absolute;
    top: 2px;
    left: -5px;
    width: 0;
    height: 0;
    border: 5px solid;
    border-right-color: transparent;
    border-bottom-color: transparent;
    transform: rotate(-45deg);
}

.xcoupon_tag:after {
    content: '';
    position: absolute;
    top: 6px;
    left: -1px;
    width: 2px;
    height: 2px;
    border-radius: 2px;
    background-color: #fff;
}

.xcoupon_kind {
    display: block;
    margin-top: 7px;
    font-size: 12px;
}

.xcoupon_foot {
    padding: 10px;
    border-bottom-left-radius: 5px;
    border-bottom-right-radius: 5px;
    color: #fff;
}

.xcoupon_foot_text {
    display: block;
    overflow: hidden;
    line-height: 1;
    font-size: 12px;
}

.xcoupon_foot_text:not(:first-child) {
    margin-top: 10px;
}

.xcoupon_date {
    float: right;
}

.xcoupon_coner {
    position: absolute;
    top: 5px;
    right: 0;
    padding-left: 5px;
    height: 15px;
    border-top-left-radius: 8px;
    border-bottom-left-radius: 8px;
    line-height: 15px;
    font-size: 8px;
    color: #fff;
}

.xcoupon_coner:before {
    content: '';
    position: absolute;
    top: 0;
    right: -5px;
    height: 23px;
    width: 5px;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
}

.xcoupon_coner:after {
    content: '';
    position: absolute;
    top: 15px;
    right: -4px;
    width: 4px;
    height: 8px;
    border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
}

.xcoupon_coner.col_blue {
    background-color: #4c91ff;
}

.xcoupon_coner.col_blue:before {
    background-color: #4c91ff;
}

.xcoupon_coner.col_blue:after {
    background-color: #2e5ead;
}

.xcoupon_coner.col_grey {
    background-color: #757575;
}

.xcoupon_coner.col_grey:before {
    background-color: #757575;
}

.xcoupon_coner.col_grey:after {
    background-color: #474747;
}

