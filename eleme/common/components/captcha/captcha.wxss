.captcha-wrapper {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0,0,0,.5);
    z-index: 101;
}

.captcha-modal {
    position: fixed;
    top: 442rpx;
    left: 56rpx;
    width: 640rpx;
    box-sizing: border-box;
    padding: 0 28rpx;
    background-color: #fff;
    border-radius: 8rpx;
    z-index: 1000;
}

.captcha-modal-title {
    padding-top: 40rpx;
    color: #333;
    font-size: 36rpx;
    text-align: center;
}

.captcha-modal-body {
    margin-top: 36rpx;
    position: relative;
}

.captcha-modal-foot {
    padding-top: 36rpx;
    padding-bottom: 40rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.captcha-modal-input {
    box-sizing: border-box;
    width: 100%;
    height: 74rpx;
    padding-left: 20rpx;
    border: solid 1px #ddd;
}

.captcha-modal-image {
    position: absolute;
    top: 6rpx;
    right: 6rpx;
    width: 180rpx;
    height: 60rpx;
    background-color: #eee;
    z-index: 2;
}

.captcha-modal-button {
    width: 280rpx;
    font-size: 32rpx;
    background-color: #fff;
}

.captcha-modal-button.dismiss {
    color: #666;
}

.captcha-modal-button.primary {
    color: #fff;
    background-color: #3190e8;
    border: none;
}