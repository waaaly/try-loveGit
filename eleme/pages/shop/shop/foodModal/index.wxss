.food-modal-body {
    position: relative;
    box-sizing: border-box;
}

.food-modal-image {
    width: 640rpx;
    height: 640rpx;
    display: block;
}

.food-model-desc {
    font-size: 22rpx;
    line-height: 1.27;
    color: #dddddd;
    position: absolute;
    bottom: 0;
    padding: 0 25rpx 20rpx;
    left: 0;
    right: 0;
    height: 240rpx;
    background-image: linear-gradient(to bottom,rgba(0,0,0,0.0),rgba(0,0,0,0.6));
    display: flex;
    align-items: flex-end;
}

.food-modal-footer {
    padding: 30rpx 30rpx 0;
}

.food-modal-footer .food-name {
    font-size: 32rpx;
    font-weight: 500;
    color: #333333;
}

.food-modal-footer .food-activity {
    margin-top: 14rpx;
}

.food-modal-footer .food-price {
    margin: 53rpx 0 30rpx;
    height: 44rpx;
    line-height: 44rpx;
}

.food-modal-footer .cart-btn {
    display: flex;
    flex: 1;
    font-size: 20rpx;
}

.food-modal-footer .item-ctrl {
    padding: 0;
}

.food-modal-footer .item-spec-btn {
    margin: 0;
}

.food-modal-footer .item-quantity {
    margin: 0 10rpx;
}