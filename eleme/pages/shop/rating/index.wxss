@import "../components/rating-block/index.wxss";

@import "../components/rating-star/index.wxss";

@import "../components/rating-tag/index.wxss";

.rate-color-secondary {
    color: rgb(153,153,153);
}

.rate-container {
    background: rgb(238,238,238);
    height: 100%;
}

.rate-header {
    padding: 26rpx 0;
    font-size: 11rpx;
    color: rgb(102,102,102);
    background: #fff;
}

.rate-spliter {
    background: rgb(238,238,238);
    width: 1px;
    height: 140rpx;
    margin: 0 40rpx;
}

.rate-header-left {
    text-align: center;
}

.overall-rate {
    color: rgb(255,96,0);
    font-size: 52rpx;
}

.overall-rate-text {
    font-size: 22rpx;
}

.rate-compare {
    font-size: 22rpx;
    color: rgb(153,153,153);
    margin-top: 8rpx;
}

.rate-header-right {
    font-size: 22rpx;
    line-height: 1.8;
}

.rating-label {
    padding-right: 20rpx;
}

.rating-value {
    color: rgb(255,170,12);
    margin-left: 10rpx;
}

.rate-tag-list-container {
    padding: 0 30rpx;
    margin-top: 20rpx;
    background: #fff;
}

.rate-tag-list {
    padding-top: 20rpx;
    padding-bottom: 6rpx;
}

.rate-filter {
    font-size: 24rpx;
    padding: 22rpx 0;
    border-top: 1px dashed rgb(221,221,221);
    color: rgb(102,102,102);
}

.rate-content-filter {
    width: 28rpx;
    height: 28rpx;
    margin-right: 10rpx;
}

.rate-main {
    background: #fff;
    font-size: 22rpx;
}

.rate-load-all {
    background: #eee;
    color: rgb(153,153,153);
    font-size: 24rpx;
    text-align: center;
    padding: 20rpx 0;
}

.rate-list-empty {
    background: #fff;
    font-size: 28rpx;
    color: rgb(102,102,102);
    height: 300rpx;
}