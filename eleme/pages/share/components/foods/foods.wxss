.foods {
    margin-top: 20rpx;
    background-color: #f5f5f5;
    padding: 20rpx 0 20rpx 10rpx;
}

.foods>.title {
    font-size: 26rpx;
    font-weight: bold;
    color: #666;
    text-align: center;
}

.foods .title-bar {
    margin: 0 16rpx;
    width: 183rpx;
    height: 4rpx;
    vertical-align: middle;
}

.foods .title-bar:last-child {
    transform: rotate(180deg);
}

.food {
    display: inline-block;
    width: 330rpx;
    margin: 10rpx;
    background-color: #fff;
}

.food>image {
    width: 330rpx;
    height: 330rpx;
    vertical-align: top;
}

.food>.body {
    padding: 16rpx 20rpx;
}

.food .name {
    font-size: 26rpx;
    color: #333;
    font-weight: bold;
    line-height: 1.5;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.food .amount {
    font-size: 22rpx;
    color: #666;
}

.food .price {
    padding-top: 32rpx;
    font-size: 32rpx;
    color: #ff6000;
    line-height: 27rpx;
    font-weight: bold;
}

.food .yen {
    font-size: 20rpx;
}