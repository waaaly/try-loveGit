.luckyhongbao {
    background: rgb(216,24,13);
    padding-bottom: 126rpx;
    min-height: calc(100% - 126rpx);
}

.luckyhongbao .header {
    height: 400rpx;
}

.luckyhongbao .header image {
    width: 100%;
    height: 400rpx;
}

.fail {
    background: rgba(34,7,5,0.25);
    width: 716rpx;
    margin: 20rpx auto 0;
    border-radius: 10rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 200rpx;
}

.fail .text {
    background: #fff;
    width: 670rpx;
    height: 164rpx;
    border-radius: 10rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
}

.lucky-hongbaos {
    display: flex;
    flex-direction: column;
    background: rgba(34,7,5,0.25);
    width: 716rpx;
    margin: 20rpx auto 0;
    border-radius: 10rpx;
    justify-content: center;
    align-items: center;
    padding-top: 20rpx;
}

.lucky-hongbao-item {
    height: 200rpx;
    background: #fff;
    width: 630rpx;
    height: 164rpx;
    border-radius: 10rpx;
    display: flex;
    align-items: center;
    padding: 0 20rpx;
    margin-bottom: 20rpx;
}

.lucky-hongbao-icon {
    width: 100rpx;
    height: 100rpx;
}

.lucky-hongbao-middle {
    flex: 1;
    margin-left: 20rpx;
}

.lucky-hongbao-name {
    font-size: 28rpx;
    color: #333;
    font-weight: bold;
}

.lucky-hongbao-rule {
    font-size: 20rpx;
    color: #999;
    margin-top: 4rpx;
}

.lucky-hongbao-time {
    margin-top: 4rpx;
    font-size: 20rpx;
    color: #999;
}

.lucky-hongbao-right {
    width: 116rpx;
    text-align: center;
    display: flex;
    flex-direction: column;
}

.lucky-hongbao-money {
    display: flex;
    align-items: center;
    justify-content: center;
}

.lucky-hongbao-rmb {
    color: #FF3C00;
    font-size: 26rpx;
    font-weight: bold;
    padding-top: 16rpx;
}

.lucky-hongbao-amount {
    color: #FF3C00;
    font-size: 60rpx;
    font-weight: bold;
}

.lucky-hongbao-decimal {
    color: #FF3C00;
    font-size: 44rpx;
    padding-top: 8rpx;
}

.lucky-hongbao-use {
    width: 116rpx;
    height: 44rpx;
    border-radius: 22rpx;
    font-size: 20rpx;
    line-height: 44rpx;
    color: #fff;
    background: #FF4B33;
    text-align: center;
}

.records-title {
    font-size: 24rpx;
    font-weight: bold;
    color: #fff;
    padding: 20rpx 0;
    text-align: center;
}

.records {
    width: 716rpx;
    background: rgba(34,7,5,0.25);
    margin: 20rpx auto 0;
    border-radius: 10rpx;
    padding-bottom: 20rpx;
}

.record {
    display: flex;
    align-items: center;
    padding: 12rpx 20rpx;
    font-size: 26rpx;
    color: #fff;
}

.record .record-icon {
    width: 84rpx;
    height: 84rpx;
    border-radius: 8rpx;
}

.record .record-lucky {
    width: 132rpx;
    height: 36rpx;
    margin-top: 4rpx;
}

.record .record-middle {
    flex: 1;
    margin-left: 20rpx;
}

.record .record-name {
    color: #FFF700;
    margin-right: 14rpx;
    font-weight: bold;
}

.record .record-right {
    color: #FFF700;
    font-weight: bold;
    text-align: right;
}

.rules {
    width: 716rpx;
    background: rgba(34,7,5,0.25);
    margin: 20rpx auto 0;
    border-radius: 10rpx;
    padding-bottom: 20rpx;
}

.rules-title {
    font-size: 24rpx;
    font-weight: bold;
    color: #fff;
    padding: 20rpx 0;
    text-align: center;
}

.rule {
    font-size: 24rpx;
    color: #fff;
    font-weight: bold;
    padding: 0 18rpx;
    line-height: 40rpx;
}

.use-btn {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 106rpx;
    background: #00A6FF;
    font-size: 32rpx;
    color: #fff;
    font-weight: bold;
    display: flex;
    align-items: center;
    justify-content: center;
}

.lucky-login {
    display: flex;
    align-items: center;
    justify-content: center;
}