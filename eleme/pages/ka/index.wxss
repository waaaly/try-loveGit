.noData {
    text-align: center;
    margin: 100rpx;
}

.list {
    opacity: 0.5;
}

.title {
    display: flex;
    align-items: center;
    margin: 25rpx 0;
    font-size: 24rpx;
    text-align: center;
    color: #999;
    padding: 0 20rpx;
}

.title text {
    margin: 0 20rpx;
}

.openMore {
    font-size: 24rpx;
    text-align: center;
    line-height: 33rpx;
    margin: 40rpx 0 60rpx;
