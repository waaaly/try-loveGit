}

.line {
    flex: 1;
    height: 1rpx;
    background-color: #e3e3e3;
}

.buttonContainer {
    padding-bottom: 40rpx;
}

.button {
    margin: 0 auto;
    width: 80%;
    line-height: 74rpx;
    border-radius: 4rpx;
    margin-top: 20rpx;
    background-color: #3190e8;
    font-size: 30rpx;
    text-align: center;
    color: #fff;
}