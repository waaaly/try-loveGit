.pay-method-bottom-sheet-wrapper {
    display: none;
}

.pay-method-bottom-sheet-wrapper.open {
    display: block;
    background: rgba(0,0,0,0.2);
    position: fixed;
    top: 0;
    height: 100%;
    width: 100%;
    z-index: 8;
}

.pay-method-bottom-sheet {
    position: fixed;
    bottom: 0;
    height: 600rpx;
    width: 100%;
    background: #fff;
    z-index: 8;
    transition: all linear 0.5s;
}

.pay-method-bottom-sheet .header {
    padding: 0 30rpx;
    height: 96rpx;
    line-height: 96rpx;
    font-size: 30rpx;
    text-align: center;
    color: #666;
    background: #f5f5f5;
}

.pay-method-bottom-sheet .method {
    padding: 0 30rpx;
    height: 128rpx;
    font-size: 30rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #333;
    background: #fff;
    border-bottom: 1rpx solid #eee;
}

.pay-method-bottom-sheet .method .description {
    font-size: 26rpx;
}

.pay-method-bottom-sheet .method.disabled text {
    color: #999;
}

.pay-method-bottom-sheet .method .state image {
    width: 40rpx;
    height: 40rpx;
}