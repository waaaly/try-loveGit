.hongbao-ticket {
    position: relative;
    margin: 30rpx 20rpx;
    margin-top: 0;
    border: 1rpx solid #ddd;
    border-radius: 6rpx;
    border-top: none;
    background: #fff;
}

.hongbao-ticket-top-border {
    width: 100%;
    height: 8rpx;
    position: absolute;
    top: 0;
    left: 0;
}

.description-list {
    font-size: 20rpx;
    -webkit-text-size-adjust: none;
    padding-left: 14rpx;
    position: relative;
}

.description-list:before {
    content: '\2E';
    position: absolute;
    left: 0;
    top: -10rpx;
    font-size: 30rpx;
}

.hongbao-ticket-header {
    padding: 20rpx 30rpx;
    box-sizing: border-box;
    display: flex;
    min-height: 200rpx;
    position: relative;
    align-items: center;
}

.hongbao-ticket-amount {
    width: 220rpx;
    color: #ff5340;
    font-size: 70rpx;
    text-align: center;
    white-space: nowrap;
}

.hongbao-ticket-header .status {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.invalid .hongbao-ticket-amount,.invalid .hongbao-ticket-description {
    color: #ddd;
}

.hongbao-ticket-amount-rmb {
    display: inline-block;
    text-align: right;
}

.hongbao-ticket-amount-rmb::before {
    content: "\00a5";
    font-size: 36rpx;
    font-weight: bold;
    position: relative;
    left: -8rpx;
    bottom: 2rpx;
}

.hongbao-ticket-amount-small {
    font-size: 50rpx;
    font-weight: bold;
    display: inline-block;
}

.hongbao-ticket-description {
    width: 400rpx;
    padding-left: 36rpx;
    color: #666;
    border-left: 1rpx dashed #ddd;
    overflow: hidden;
}

.hongbao-title {
    font-size: 32rpx;
    line-height: 1;
    font-weight: 700;
    margin-bottom: 10rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.hongbao-ticket-header::before,.hongbao-ticket-header::after {
    content: "";
    position: absolute;
    bottom: -10rpx;
    height: 20rpx;
    width: 20rpx;
    background-color: #f5f5f5;
    z-index: 1;
    border-radius: 10rpx;
    border-top: 1rpx solid #ddd;
}

.hongbao-ticket-header::before {
    border-right: 1rpx solid #ddd;
    transform: rotate(45deg);
    left: -10rpx;
}

.hongbao-ticket-header::after {
    border-left: 1rpx solid #ddd;
    transform: rotate(-45deg);
    right: -10rpx;
}

.hongbao-ticket-variety {
    background: #f8f8f8;
    border-top: 1rpx dashed #ddd;
    color: #999;
    padding: 23rpx;
    position: relative;
}

.hongbao-sum-condition {
    font-size: 24rpx;
}

.hongbao-reason {
    font-size: 24rpx;
    color: #ddd;
    padding: 0 0 20rpx 30rpx;
}

.hongbao-reason-title {
    color: #ff0034;
    opacity: 0.5;
}

.hongbao-ticket-dummy-variety {
    z-index: 2;
    background: #f5f5f5;
    position: absolute;
    width: 100%;
    bottom: -22rpx;
    height: 20rpx;
}