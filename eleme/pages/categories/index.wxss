.container {
    height: 100%;
    overflow: hidden;
}

.header {
    box-sizing: border-box;
    height: 96rpx;
    padding: 16rpx;
    background-color: #f5f5f5;
}

.search-input {
    box-sizing: border-box;
    background-color: #fff;
    height: 64rpx;
    line-height: 64rpx;
    width: 100%;
    text-align: center;
    border-radius: 4rpx;
    font-size: 28rpx;
    color: rgba(0,0,0,.38);
    border: solid 1rpm #eee;
}

.icon-search {
    width: 28rpx;
    height: 28rpx;
    margin-right: 16rpx;
    position: relative;
    top: 6rpx;
}

.banner {
    margin: 30rpx auto 0;
    width: 690rpx;
    height: 300rpx;
}

.banner image {
    width: 100%;
    height: 100%;
}

.categories {
    box-sizing: border-box;
    padding: 30rpx;
}

.category {
    display: inline-flex;
    box-sizing: border-box;
    margin-bottom: 30rpx;
    height: 126rpx;
    background-color: #f8f8f8;
    padding: 8rpx 16rpx 8rpx 30rpx;
    align-items: center;
    width: calc((100% - 30rpx) / 2);
}

.category:nth-of-type(2n-1) {
    margin-right: 30rpx;
}

.category-title {
    flex: 1;
    font-size: 30rpx;
    height: 42rpx;
    color: #333;
}

.category-image {
    width: 110rpx;
    height: 110rpx;
}