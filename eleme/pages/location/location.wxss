@import "../address/templates/location-address-item-content/index.wxss";

view {
    box-sizing: border-box;
}

.location-address {
    background: #f5f5f5;
    height: 100%;
}

.search {
    padding: 0 20rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 88rpx;
    text-align: center;
    font-size: 28rpx;
    color: rgb(153,153,153);
    background-color: #0097ff;
}

.search-icon {
    position: absolute;
    left: 260rpx;
    width: 26rpx;
    height: 26rpx;
    z-index: 10;
}

.search-city {
    height: 66rpx;
    width: 160rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    font-size: 28rpx;
    text-align: center;
    color: white;
    line-height: 66rpx;
}

.search-input {
    height: 66rpx;
    line-height: 66rpx;
    width: 100%;
    border-radius: 6rpx;
    background-color: #fff;
    margin-left: 6rpx;
}

.icon-pulldown {
    width: 16rpx;
    height: 8rpx;
    display: inline-block;
    flex: none;
}

.search-input-placeholder {
    color: rgb(153,153,153);
}

.seach-input-placeholder {
    color: rgb(153,153,153);
}

.address {
    box-sizing: border-box;
    width: 100%;
    font-size: 28rpx;
    padding-bottom: 160rpx;
}

.address .title {
    box-sizing: border-box;
    height: 68rpx;
    line-height: 28rpx;
    padding: 27rpx 27rpx 13rpx;
    color: rgb(102,102,102);
    background-color: #f5f5f5;
}

.address .current-address .content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 88rpx;
    line-height: 88rpx;
    padding: 0 27rpx;
    color: rgb(51,51,51);
    background-color: #fff;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.address .items {
    background-color: #fff;
}

.address .item {
    height: 88rpx;
    line-height: 88rpx;
    margin-left: 30rpx;
    color: rgb(51,51,51);
    border-bottom: 1rpx solid #eee;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.address .location-position {
    display: inline-block;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    padding-right: 15rpx;
    flex: 1;
}

.address .relocate-position {
    width: 180rpx;
    display: flex;
    align-items: center;
    justify-content: flex-end;
}

.address .more {
    position: relative;
    border: 0;
}

.address .single {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.address .current-address .button {
    display: flex;
    align-items: center;
    width: 32rpx;
    height: 32rpx;
}

.address .current-address text {
    margin-left: 10rpx;
    color: rgb(49,144,232);
}

.address .locate-icon {
    position: relative;
    display: inline-block;
    height: 64rpx;
    width: 64rpx;
    text-align: right;
    border: 2rpx solid #0097ff;
    border-radius: 100%;
}

.address .locate-icon::before {
    content: '';
    height: 4rpx;
    width: 12rpx;
    display: block;
    position: absolute;
    top: 26rpx;
    left: -1rpx;
    background: #0097ff;
    box-shadow: 48rpx 0rpx 0rpx #0097ff;
}

.address .locate-icon::after {
    content: '';
    height: 12rpx;
    width: 4rpx;
    display: block;
    position: absolute;
    top: 0rpx;
    left: 26rpx;
    background: #0097ff;
    box-shadow: 0rpx 48rpx 0rpx #0097ff;
}

.address .right-arrow {
    position: absolute;
    right: 30rpx;
    top: 35rpx;
    width: 21rpx;
    height: 21rpx;
    text-align: right;
    border: 5rpx solid #cacaca;
    border-left: 0;
    border-bottom: 0;
    transform: rotate(45deg);
}

.shipping-address .content {
    box-sizing: border-box;
    width: 100%;
    min-height: 134rpx;
    padding: 28rpx 30rpx;
    background-color: #fff;
    border-bottom: 1rpx solid #eee;
}

.shipping-address .content .content-info text {
    font-size: 32rpx;
    color: #333;
    padding-right: 30rpx;
}

.shipping-address .content-address {
    margin-top: 7rpx;
}

.shipping-address .content-address .tag {
    display: inline-block;
    height: 28rpx;
    line-height: 28rpx;
    width: 54rpx;
    text-align: center;
    margin-right: 9rpx;
    color: #fff;
    font-size: 22rpx;
    border-radius: 4rpx;
    background-color: #3190e8;
}

.shipping-address .content-address view {
    font-size: 26rpx;
    color: #666;
    line-height: 34rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.user-address {
}

.address-list .address-item {
    background: #fff;
    display: flex;
    align-items: center;
    padding: 10rpx 30rpx;
    padding-right: 0;
    box-sizing: border-box;
}

.divider {
    height: 1rpx;
    width: 100%;
    background: #eee;
}

.add {
    background: #fff;
    width: 100%;
    height: 100rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    position: fixed;
    bottom: 0;
    border-top: 1rpx solid #eee;
}

.add text {
    color: #0097ff;
    font-size: 32rpx;
    font-weight: bolder;
}

.add .button {
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
}