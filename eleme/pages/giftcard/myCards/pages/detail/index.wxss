.card-detail {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-height: 100%;
    background: #f5f5f5;
}

.card-detail .header {
    display: flex;
    align-items: center;
    flex-direction: column;
    width: 100%;
    padding: 70rpx 0 40rpx;
    background: #fff;
}

.card-detail .card-face {
    position: relative;
    width: 622rpx;
    height: 373rpx;
    border-radius: 20rpx;
}

.card-detail .card-face image {
    width: 622rpx;
    height: 373rpx;
    border-radius: 2rpx;
    box-shadow: 0 0 24px 0 rgba(0,0,0,0.2);
}

.card-detail .card-face .mask {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    border-radius: 20rpx;
    background-color: rgba(0,0,0,0.6);
}

.card-face .mask image {
    position: absolute;
    width: 200rpx;
    height: 200rpx;
    right: -30rpx;
    bottom: -30rpx;
}

.card-detail .card-description {
    margin-top: 40rpx;
}

.card-description .card-denomination {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    font-size: 26rpx;
    color: #999;
}

.card-description .use-btn {
    margin-top: 40rpx;
    width: 650rpx;
    height: 88rpx;
    line-height: 88rpx;
    font-size: 32rpx;
    color: #fff;
    text-align: center;
    border-radius: 4rpx;
    background-color: #2396ff;
}

.card-detail .card-link {
    width: 100%;
    margin-top: 20rpx;
    background: #fff;
}

.card-link .link-item {
    padding: 0 40rpx;
    height: 88rpx;
    line-height: 88rpx;
    font-size: 30rpx;
    border-bottom: 1rpx solid #ddd;
    background: url(//fuss10.elemecdn.com/e/9c/f50743cf353b8a23e47b9e1215a78png.png) no-repeat;
    background-size: 28rpx 28rpx;
    background-position: right 40rpx top 50%;
}

.card-status-text {
    display: flex;
    align-items: center;
    margin-top: 51rpx;
    font-size: 26rpx;
    color: #666;
}

.card-status-text>image {
    margin-right: 16rpx;
    width: 28rpx;
    height: 28rpx;
}