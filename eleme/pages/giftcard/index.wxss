.gift-card swiper {
    height: 360rpx;
}

.gift-card .slide-image {
    width: 750rpx;
    height: 360rpx;
}

.gift-card .card-lists {
    padding: 0 40rpx;
}

.card-lists .list-item {
    margin-top: 50rpx;
}

.card-lists .list-title {
    font-size: 32rpx;
    color: #333;
    font-weight: bold;
    margin-bottom: 20rpx;
}

.card-lists .cards {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

.card-lists .card-item {
    width: 325rpx;
    border: 1rpx solid #eee;
    border-radius: 8rpx;
}

.card-lists .card-item image {
    width: 100%;
    height: 200rpx;
    display: block;
}

.card-lists .card-item view {
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 28rpx;
    color: #333;
    height: 80rpx;
}

.card-pack {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 110rpx;
    height: 110rpx;
    background: #fff;
    box-shadow: 0 0 24px 0 rgba(0,0,0,0.2);
    border-radius: 50%;
    position: fixed;
    right: 40rpx;
    bottom: 40rpx;
}

.card-pack image {
    width: 48rpx;
    height: 40rpx;
    border-radius: 2rpx;
    margin-bottom: 8rpx;
}

.card-pack text {
    font-size: 20rpx;
    color: #333;
}