@import "components/food/food.wxss";

@import "components/progress/progress.wxss";

@import "components/scenes-bar/scenes-bar.wxss";

.sales-list-container {
    width: 100vw;
    overflow: hidden;
    height: calc(100vh - 90rpx);
}

.sales-list-full {
    background-color: #f5f5f5;
    display: flex;
    height: 100%;
    transition: all .35s ease-in-out;
}

.sales-list {
    width: 100vw;
    height: 100%;
}

.sales-menus-load {
    text-align: center;
    line-height: 60rpx;
    color: #888;
    font-size: 28rpx;
    height: 154rpx;
}

.sales-popbar {
    position: fixed;
    color: #fff;
    font-size: 30rpx;
    left: 50%;
    bottom: 30rpx;
    width: 300rpx;
    height: 64rpx;
    line-height: 64rpx;
    margin-left: -150rpx;
    border-radius: 33rpx;
    background: #555;
    opacity: .95;
    text-align: center;
}

.sales-popbar-num {
    font-weight: 600;
}

.sales-popbar-icon {
    width: 30rpx;
    height: 36rpx;
    line-height: 64rpx;
    vertical-align: text-bottom;
    margin-right: 19rpx;
}