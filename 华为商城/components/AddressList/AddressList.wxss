@import "../../app.wxss";

.address-list {
}

.address-list .address-item {
    padding: 25rpx 0 25rpx 34rpx;
    position: relative;
}

.address-list .address-item:after {
    content: '';
    position: absolute;
    left: 34rpx;
    right: 34rpx;
    bottom: 0;
    border-bottom: 1px solid #eaeaea;
}

.address-list .address-item:nth-last-child(1):after {
    content: '';
    border-bottom: 0;
}

.address-item .address-default {
    width: 75rpx;
    position: absolute;
    top: 0;
    left: 0;
}

.address-item .address-default image {
    width: 75rpx;
    height: 30rpx;
}

.address-item label {
    display: -ms-flexbox;
    display: box;
    display: -webkit-flex;
    display: flex;
    align-items: center;
    -webkit-box-flex: 1;
    flex-shrink: 1;
    overflow: hidden;
}

.address-item label .radiobox {
    padding-right: 21rpx;
    -webkit-box-flex: 0;
    flex-shrink: 0;
    overflow: hidden;
}

.address-item label .address-cont {
    width: 100%;
    word-break: break-all;
    -webkit-box-flex: 1;
    flex-shrink: 1;
    overflow: hidden;
}

.address-item label .addr-user {
    font-size: 28rpx;
}

.address-item label .addr-user view {
    display: inline-block;
}

.address-item label .addr-user-name {
    font-weight: bold;
    padding-right: 21rpx;
}

.address-item label .addr-info {
    font-size: 25rpx;
    line-height: 1.3;
    padding-top: 11rpx;
}

.address-item label .address-btn {
    width: 38rpx;
    height: 38rpx;
    padding: 15rpx 49rpx 15rpx 15rpx;
    margin-left: 34rpx;
    -webkit-box-flex: 0;
    flex-shrink: 0;
    overflow: hidden;
}

.address-item label .address-btn image {
    width: 38rpx;
    height: 38rpx;
    display: block;
    margin-left: 15rpx;
}

.address-pop-box .address-item {
    position: relative;
    padding: 27rpx 0;
    border-bottom: 1rpx solid #eaeaea;
}

.address-pop-box .address-item:after {
    border: 0;
}

.address-pop-box .address-item label .radiobox {
    padding-right: 33rpx;
}

.address-pop-box .address-item label .radiobox radio+.state {
    background-image: url(data:image/png;base64,);
    background-position: center;
    background-size: 100%;
}

.address-pop-box .address-item label .address-cont {
    padding-top: 37rpx;
}

.address-pop-box .address-item label .address-btn {
    width: 50rpx;
    height: 50rpx;
    margin-left: 65rpx;
    padding-right: 20rpx;
    position: relative;
    right: -20rpx;
}

.address-pop-box .address-item label .address-btn image {
    width: 100%;
    height: 100%;
    margin-left: 0;
}

.address-pop-box .address-item label .addr-info {
    font-size: 23rpx;
    color: #999;
    padding-top: 3rpx;
}

.address-pop-box .address-item .addr-user {
    font-size: 27rpx;
    position: absolute;
    left: 69rpx;
    top: 27rpx;
    width: 100%;
    height: 37rpx;
}

.address-pop-box .address-item .addr-user view {
    vertical-align: middle;
}

.address-pop-box .address-item .addr-user .addr-user-phone {
    font-weight: bold;
    padding-right: 21rpx;
}

.address-pop-box .address-item .addr-user .addr-user-defalut {
    position: relative;
    width: 64rpx;
    padding: 15rpx 0 14rpx;
    line-height: 2rpx;
    font-size: 21rpx;
    border-radius: 17rpx;
    border: 1rpx solid #ca141d;
    color: #ca141d;
    text-align: center;
    box-sizing: border-box;
}

.address-pop-box .addr-user .addr-user-defalut text {
    display: block;
    height: 100%;
    position: relative;
    left: 1rpx;
}