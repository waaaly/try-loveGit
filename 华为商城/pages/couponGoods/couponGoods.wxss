page {
    background: #F9F9F9;
}

.coupon-goods-box {
    background: #fff;
    padding: 21rpx 33rpx;
}

.coupon-goods-box .coupon-goods-img {
    width: 198rpx;
    height: 198rpx;
}

.coupon-goods-box .coupon-goods-img image {
    width: 100%;
    height: 100%;
}

.coupon-goods-box .coupon-goods-theme {
    margin-top: 10rpx;
    margin-left: 31rpx;
    position: relative;
    width: 100%;
    -webkit-box-flex: 1;
    flex-shrink: 1;
    overflow: hidden;
}

.coupon-goods-box .coupon-goods-theme .coupon-goods-title {
    font-size: 29rpx;
}

.coupon-goods-box .coupon-goods-theme .ellipsis-one {
    width: 458rpx;
    height: 36rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    -webkit-box-flex: 0;
    flex-shrink: 0;
}

.coupon-goods-box .coupon-goods-theme .ellipsis-tow {
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.coupon-goods-box .coupon-goods-theme .coupon-goods-tips {
    font-size: 25rpx;
    color: #999;
    margin-top: 8rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.coupon-goods-box .coupon-goods-theme .coupon-goods-price {
    position: absolute;
    left: 0;
    bottom: 42rpx;
}

.coupon-goods-box .coupon-goods-theme .coupon-goods-price .new-price {
    font-size: 31rpx;
    color: #ca141d;
}

.coupon-goods-box .coupon-goods-theme .coupon-goods-price .old-price {
    font-size: 23rpx;
    color: #999;
    padding-left: 7rpx;
    text-decoration: line-through;
}